body {
  background: #616161;
}
.brand {
  float: left;
  padding-right: 8px;
}
ul.nav {
  list-style: none;
  margin: 0 0 2em;
  padding: 0;
}
ul.nav li {
  display: inline;
}
.nav-bar {
  li {
    a {
      margin-left: -8px;
    }
  }
}
#flash_notice, #flash_alert {
  padding: 5px 8px;
  margin: 10px 0;
}
#flash_notice {
  background-color: #CFC;
  border: solid 1px #6C6;
}
#flash_alert {
  background-color: #FCC;
  border: solid 1px #C66;
}
.form-inputs {
  margin: 10px 0px;
}
.form-actions {
  margin: 10px 0px;
}
div.twelve {
  h3 {
    text-align: center;
  }
}
.newest_products {
  .panel {
    text-align: center;
    height: 210px;
    max-height: 210px;
    overflow: hidden;
    box-shadow: 1px 1px 3px #eaeaea;
    &:hover {
      border-color: #00395a;
    }  
  }
}
.toolkit_resources {
  .panel {
    height: 140px;
    max-height: 140px;
    overflow: hidden;
    box-shadow: 1px 1px 3px #eaeaea; 
    &:hover {
      border-color: #00395a;
    }   
  }
}
div.sidenav {
  padding-left: 0;
  padding-right: 0;
}
div.contact-card {
  background: white;
  padding: 0px 6px 8px;
  overflow: hidden;
  box-shadow: 1px 1px 2px #999;
  margin-bottom: 8px;
  h5 {
    margin-bottom: 6px;
  }
  p {
    font-size: 11px;
    line-height: 14px;
    color: #444;
    margin-bottom: 1px;
  }
}
div#main {
  background: #FFF;
  padding-bottom: 10px;
  min-height: 400px;
  .row {
    margin-bottom: 25px;
  }
}
div.content-container {
  background: url('<%= image_path('white-90.png') %>');
}
ul.breadcrumbs {
  background: url('<%= image_path('white-90.png') %>');
}
div.description {
  border: 1px solid #CCC;
  border-radius: 6px;
  box-shadow: inset 0 2px 6px #EEE;
  margin: 0px;
  padding: 10px;
  height: 150px;
  overflow: auto;
}
div.image-container {
  text-align: center;
  height: 140px;
  overflow: hidden;
  margin-bottom: 8px;
  font-size: 80%;
  color: #444;
  padding: 6px 1px 1px;
  div.fname {
    font-size: 11px;
    font-weight: bold;
    color: #555;
    margin: 2px 0px 6px;
  }
}
footer {
  background: url('<%= image_path('dark-gray-80.png') %>');
  padding-bottom: 20px;
  color: #999;
  text-shadow: 0px 1px 1px #000;
  div.twelve {
    margin-top: 20px;
//    border-top: 1px dotted #CCC;
  }
  p {
    margin: 2px;
  }
  a {
    color: #FFF;
    &:hover {
      color: #e6f4f9;
      text-decoration: underline;
    }
  }
}

@media only screen and (min-width: 980px) {
  .bg-offset {
    margin-left: 200px;
  }
  div.content-container {
    background: url('<%= image_path('light-gray-50.png') %>');
  }
}
