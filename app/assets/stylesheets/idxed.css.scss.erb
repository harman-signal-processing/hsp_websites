@font-face {
    font-family: 'RobotoRegular';
    src: font-url('Roboto-Regular-webfont.eot');
    src: font-url('Roboto-Regular-webfont.eot?#iefix') format('embedded-opentype'),
         font-url('Roboto-Regular-webfont.woff') format('woff'),
         font-url('Roboto-Regular-webfont.ttf') format('truetype'),
         font-url('Roboto-Regular-webfont.svg#RobotoRegular') format('svg');
    font-weight: normal;
    font-style: normal;

}
@font-face {
    font-family: 'RobotoThin';
    src: font-url('Roboto-Thin-webfont.eot');
    src: font-url('Roboto-Thin-webfont.eot?#iefix') format('embedded-opentype'),
         font-url('Roboto-Thin-webfont.woff') format('woff'),
         font-url('Roboto-Thin-webfont.ttf') format('truetype'),
         font-url('Roboto-Thin-webfont.svg#RobotoThin') format('svg');
    font-weight: normal;
    font-style: normal;

}
@font-face {
    font-family: 'RobotoLight';
    src: font-url('Roboto-Light-webfont.eot');
    src: font-url('Roboto-Light-webfont.eot?#iefix') format('embedded-opentype'),
         font-url('Roboto-Light-webfont.woff') format('woff'),
         font-url('Roboto-Light-webfont.ttf') format('truetype'),
         font-url('Roboto-Light-webfont.svg#RobotoLight') format('svg');
    font-weight: normal;
    font-style: normal;

}
