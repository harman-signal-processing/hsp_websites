$font_family: Helvetica, arial, verdana, sans-serif;
$divider: "<%= image_path "digitech/gray_horizontal_divider.png"%>";

body {
	background: #dadada url(<%= image_path('digitech/gray_page_bg.jpg') %>) repeat-x;
}
nav#topnav {
	border: 1px solid #999;
	background-image: url(<%= image_path('digitech/gray_topmenu_bg.png') %>);
	li {
		a:link, a:visited {
			border-right: 1px solid #999;
			color: #111;
		}
	}
}

header#main_header div#search_form input#query {
	background: #f0f0f0 url(<%= image_path('digitech/searchMagGlass_blk.png') %>) no-repeat right;
	color: #111;
	border: 1px solid #FFF;
}

div#content_container {
    -moz-box-shadow: 0px 2px 6px #999;
	-webkit-box-shadow: 0px 2px 6px #999;
	box-shadow: 0px 2px 6px #999;
	font-family: $font_family;
	font-size: 14px;
	line-height: 24px;
	color: #222;
	padding-top: 10px;
	padding-bottom: 50px;
}

footer {
	color: #555;
	a:link, a:visited {
		color: #111
	}
}

header#product_header {
	margin-left: 20px;
	margin-top: 5px;
	height: 46px;
	h1 {
		font-size: 38px;
		color: #222;
	}
	&.istomp {
		height: 66px;
	}
}

ul#product_main_tabs {
	margin: -40px 0px 0px 260px;
	width: 730px;
	overflow: hidden;
	padding: 0;
	border-bottom: none;
	height: 24px;
	li {
		letter-spacing: -0.03em;
		margin: 0px 5px;
		a:link, a:visited {
			border: none;
			padding: 0px 4px;
			color: #797979;
			font: {
				family: $font_family;
				weight: bold;
				size: 12px;
			}
			text-transform: uppercase;			
		}
		&.current {
			margin-top: 0px;
			a {
				padding-bottom: 0px;
				padding-top: 0px;
				border-bottom: none;
				color: #111;
			}
		}	
	}
}

section#product_content {
	margin-left: 20px;
	margin-right: -10px;
	position: relative;
	height: 415px;
	overflow: hidden;
	background: {
		image: url($divider);
		position: bottom center;
		repeat: no-repeat;
	}
	div#demo_msg {
		font-size: 10px;
		letter-spacing: normal;
		font-style: oblique;
	}
	li.sm2_link a {
		padding-left: 25px;
		padding-right: 8px;
	}
	&.istomp {
		background: {
			image: url(<%= image_path('digitech/istomp/guitar_player_bg.jpg')%>);
			position: top right;
			repeat: no-repeat;
		}
		#right_column {
			top: 36px;
			width: 415px;
			height: 375px;
		}
		#left_column {
			height: 375px;
		}
	}
	&.stomp_shop {
		margin-top: 20px;
		background: {
			image: url(<%= image_path('digitech/istomp/stomp_shop_bg.jpg')%>);
			position: top right;
			repeat: no-repeat;
		}
		#right_column {
			top: 56px;
			width: 265px;
			height: 355px;
		}
		#left_column {
			margin-top: 50px;
			height: 300px;
			a {
				color: #000;
				text-decoration: none;
			}
			.free {
				text: {
					align: center;
					transform: uppercase;
				}
				font-size: 20px;
			}
		}		
	}
	&.epedal {
		margin-left: 0px;
		#left_column {
			width: 220px;
			margin-left: 0px;
			margin-top: -10px;
		}
		#right_column {
			top: 10px;
			left: 228px;
			width: 450px;
			height: 410px;
			z-index: 999;
			font-size: 13px;
			line-height: 18px;
		}
		#right_side_image {
			position: absolute;
			right: -30px;
			top: -30px;
			z-index: 1;
			#label_request_box {
				font-size: 10px;
				color: #555;
				position: absolute;
				bottom: 2px;
				right: 20px;
				width: 350px;
				text-align: center;
				a:link, a:visited {
					font-size: 15px;
					background: #e12029;
					color: white;
					padding: 4px 14px;
					text-decoration: none;
					text-shadow: 0px 1px 0px #63090d;
					border-radius: 6px;
					box-shadow: 0px 2px 4px #999;
				}
				a:hover {
					background: red;
				}
			}
		}
	}
	h2 {
		font-size: 24px;
		line-height: 28px;
		letter-spacing: normal;
	}
	#left_column {
		text-align: center;
		width: 200px;
		height: 400px;
		overflow: hidden;
		#viewer {
			position: relative;
			.burst {
				position: absolute;
				top: 2px;
				right: 2px;
			}
		}
	}
	#right_column {
		text-align: left;
		position: absolute;
		left: 215px;
		top: 10px;
		width: 710px;
		height: 400px;
		//outline: 1px solid green;
		overflow: auto;
		ul {
			margin-left: 1px;
		}
		li {
			font-size: 13px;
			line-height: 19px;
			margin-bottom: 4px;
		}
		.description h1 {
			font: {
				size: 18px;
				weight: normal;
				family: $font_family;
			}
			text-align: left;
			line-height: 22px;
			background: white;
			color: #111;
			padding-left: 0px;
		}
	}
	.gallery {
		padding-bottom: 8px;
		img {
			margin: 4px;
			padding: 4px;
			outline: 1px solid #9C9C9C;
		}
	}
}

#coverflow_container {
	position: relative;
	#slider {
		margin: 0px 40px 40px;
	}
	div.wrapper {  
	   height: 270px;  
	   width: 940px; 
	   padding: 10px;  
	   padding-top: 0px;
	   overflow: hidden;  
	   position: relative;  
	   margin: 0 auto;  
	   margin-left: -10px;
	}
	#mask {
		position: absolute;
		top: 0px;
		left: -10px;
		width: 960px;
		height: 300px;
		background-color: white;
		z-index: 999999;
	}
	#left_fade {
		position: absolute;
		top: 0px;
		left: -10px;
		z-index: 999;
	}
	#right_fade {
		position: absolute;
		top: 0px;
		right: -10px;
		z-index: 999;
	}
	#label {
		position: absolute;
		z-index: 999;
		top: 240px;
		left: -10px;
		width: 960px;
		font-size: 18px;
		text-align: center;
	}
	#coverflow_loading {
		position: relative;
		top: -340px;
		left: 390px;
		text-align: center;
		width: 100px;
		z-index: 999999;
		background: #333;
		color: white;
		font-size: 16px;
		padding: 10px 20px;
		-webkit-border-radius: 10px;
		-moz-border-radius: 10px;
		border-radius: 10px;
		-webkit-box-shadow: 0px 2px 16px #111;
		-moz-box-shadow: 0px 2px 16px #111;
		box-shadow: 0px 2px 16px #111;			
	}
	#feature_pop {
		position: absolute;
		top: -320px;
		left: 205px;
		z-index: 999999;
		background: #222;
		padding: 10px 20px;
		width: 500px;
		height: 350px;
		-webkit-border-radius: 10px;
		-moz-border-radius: 10px;
		border-radius: 10px;
		-webkit-box-shadow: 0px 2px 16px #111;
		-moz-box-shadow: 0px 2px 16px #111;
		box-shadow: 0px 2px 16px #111;
		div#pop_content {
			position: relative;
			color: white;
			.popup_left {
				position: absolute;
				left: -66px;
				top: -10px;
				z-index: 99999;
			}
			.popup_right {
				position: absolute;
				left: 250px;
				width: 252px;
				top: 18px;
				z-index: 999999;
			}
			h2 {
				color: white;
				font-size: 22px;
				line-height: 24px;
			}
			a:link, a:visited {
				color: #EEE;
			}
		}
		a#popclose {
			position: absolute;
			bottom: 6px;
			right: 10px;
			font-size: 12px;
			&:link, &:visited {
				color: #EEE;
			}
		}
	}
}
#coverflow {  
   	width: 2600px;  
    padding:  0px 42px; 
   	position: absolute;  
   	top: 0px;  
   	left: 0px;  
   	margin-top: 78px; 
	display: inline-block; 
	img {  
   		<%#= 'min-width: 120px;' %>
   		<%#= 'width: 120px;' %>
   		<%#= 'height: 180px;' %>  
   		float: left;  
   		position: relative;  
   		margin: -35px;
  	}
}

table.specs {
	margin: 4px 0px 10px;
	border: 1px solid #CCC;
	td {
		font-size: 11px;
		line-height: 14px;
		padding: 3px 10px 0px;
		border-bottom: 1px dotted #555;	
		&.name {
			background: #E1E1E1;
			color: #333;
			font-size: 14px;
			line-height: 17px;			
		}	
	}
}

div#product_buy_now_box {
	margin-top: 0px;
	span.price_label {
		font-size: 11px;
		letter-spacing: -0.05em;
		color: #333;
	}
	span.price {
		font: {
			weight: bold;
			size: 16px;
		}
	}
}

div#carousel {
	margin: 30px 0px 10px;
}
div.view_all_button_container {
	clear: both;
	text-align: center;
	margin-top: -12px;
	.view_all_button {
		cursor: pointer;
		z-index: 9999;
	}
}

div#epedals {
	margin: 0px auto 20px;
	padding: 0px 40px 20px;
	background: {
		image: url($divider);
		position: bottom center;
		repeat: no-repeat;
	}
	h3 {
		text-align: center;
		font: {
			family: $font_family;
			size: 16px;
		}
		color: #888;
		line-height: 30px;
	}
}
section#product_bottom_content {
	margin: 20px auto;
	padding-bottom: 8px;
	width: 98%;
	background: {
		image: url($divider);
		position: bottom center;
		repeat: no-repeat;
	}
	.callout {
		height: 404px;
		overflow: hidden;
		font-size: 12px;
		line-height: 21px;
		a:link, a:visited {
			text-decoration: none;
			font-weight: bold;
			color: #444;
		}
	}
	.left_callout {
		border-right: 1px solid #B3B3B3;
		width: 50%;
	}
	.right_callout {
		float: right;
		width: 49%;
	}
	div#stomp_shop_callout {
		background: {
			image: url(<%= image_path "digitech/istomp/stomp_shop_callout_bg.png"%>);
			position: bottom right;
			repeat: no-repeat;
		}
		div#stomp_shop_callout_content {
			width: 155px;
			margin-top: 8px;
			height: 315px;
			overflow: hidden;
		}
	}
	div#featured_callout {
		div.featured_pedal {
			float: left;
			width: 180px;
			text-align: center;
			position: relative;
			h5 {
				margin-top: 9px;
				text: {
					transform: uppercase;
					align: left;
				}
				color: #555;
				font-size: 15px;
				width: 190px;
				overflow: hidden;
			}
			p {
				text-align: left;
			}
			div.burst {
				position: absolute;
				top: 10px;
				right: 5px;
			}
		}
	}
	div#istomp_callout {
		background: {
			image: url(<%= image_path "digitech/istomp/istomp_callout_bg.jpg"%>);
			position: top right;
			repeat: no-repeat;
		}
		position: relative;
		div#istomp_callout_content {
			position: absolute;
			top: 290px;
			left: 200px;
			width: 250px;
		}
	}
}

div#videos_container {
	text-align: center;
	position: relative;
	#video_label1 {
		position: absolute;
		bottom: -20px;
		left: 20px;
		width: 450px;
		height: 20px;
		text-align: center;
	}
	#video_label2 {
		position: absolute;
		bottom: -20px;
		right: 20px;
		width: 450px;
		height: 20px;
		text-align: center;
	}
}

form.callout {
	margin: 30px 40px 40px 40px;
	background: #EEE;
	box-shadow: 0px 2px 5px #AAA;
	border-radius: 8px;
	padding: 20px 26px;
	label {
		display: block;
		&.control-label {
			color: #444;
			font-size: 14px;
			line-height: 24px;
			text-transform: uppercase;
		}
	}
	div.input {
		margin-bottom: 20px;
	}
	input {
		font-size: 16px;
		padding: 4px 6px;
		font-weight: normal;
	}
	table.selection {
		margin: 10px 0px 10px;
		width: 700px;
		td {
			&.label-box {
				width: 360px;
				overflow: hidden;
				background: white;
				padding: 8px;
				margin: 8px;
			}
			&.label-description {
				padding: 16px;
				margin: 8px;
				font-size: 20px;
				input.check_boxes {
					padding: 8px;
					font-size: 200%;
				}
				.hint {
					font-size:12px;
					line-height: 17px;
					margin: 8px 0;
				}
			}
		}
	}
}