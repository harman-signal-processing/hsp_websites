body { 
	background: #F0F3F4 url(<%= image_path('adminbg.png') %>) repeat-y; 
	color: #333; 
	margin: 0; 
	padding: 0;
}

body, p, ol, ul, td {
  font-family: "Helvetica Neue","Helvetica",Arial,Verdana,sans-serif;;
  font-size:   13px;
  line-height: 18px;
}
h1 {
	font-size: 36px;
	line-height: 38px;
	font-weight: 500;
	margin-bottom: 1px;
	small {
		font-size: 70%;
		color: #666;
	}
}
h2 {
	font-size: 28px;
	line-height: 30px;
	font-weight: 500;
}
h3 {
	font-size: 20px;
	line-height: 22px;
	font-weight: 500;
}
.notice, #flash_notice {
	background: #C8FFC6;
	color: #0E9C22;
	border: 1px solid #94D79B;
	border-radius: 4px;
	padding: 3px 8px;
	font-size: 18px;
	line-height: 28px;
}
.alert, #flash_alert {
	background: #F02;
	color: white;
	padding: 3px 8px;
	font-size: 18px;
	line-height: 28px;
}
pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}
ul {
	margin-left: 0;
	padding-left: 0;
	li {
		list-style: none;
		font-size: 12px;
		line-height: 22px;
	}
	&.list {
		margin-left: 16px;
		li {
			list-style: disc;
		}
	}
}
.little, .small, .hint {
	font-size: 9px;
	font-weight: normal;
}
.hint { line-height: 12px; margin: 0; padding: 0;}
.bigger_hint {
	font-size: 12px;
	font-family: "Times New Roman", Times, serif;
	line-height: 15px;
	font-style: oblique;
	color: #222;
}
.instructions {
	background: {
		color: #eaeaea;
	}
	border: 1px solid #dcdcdc;
	font-size: 14px;
	line-height: 22px;
	padding: 10px 16px;
	color: #333;
	text-shadow: 0px 1px 0px #FFF;
	margin-top: 10px;
	margin-bottom: 20px;
	box-shadow: 2px 2px 5px #ebebeb;
}
img {
	border: none;
	vertical-align: middle;
}
.field_with_errors {
	display: inline;
	label {
		color: red;
		display: inline;
		padding: 3px 2px;
	/*	font-weight: bold;*/
		font-size: 110%;
	}
	input, select {
		border: 2px solid red;
	}
}
#errorExplanation {
  width: 400px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
	h2 {
	  text-align: left;
	  font-weight: bold;
	  padding: 5px 5px 5px 15px;
	  font-size: 12px;
	  margin: -7px;
	  background-color: #c00;
	  color: #fff;
	}
	p {
	  color: #333;
	  margin-bottom: 0;
	  padding: 5px;
	}
	ul li {
	  font-size: 12px;
	  list-style: square;
	}
}
#error_explanation {
  width: 450px;
  border: 2px solid red;
	border-radius: 6px;
	-moz-border-radius: 6px;
  padding: 7px;
  padding-bottom: 4px;
  margin-bottom: 20px;
	background: #f6f6f6; /* Old browsers */
	background: -moz-linear-gradient(top, #ffffff 0%, #f6f6f6 47%, #ededed 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(47%,#f6f6f6), color-stop(100%,#ededed)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #ffffff 0%,#f6f6f6 47%,#ededed 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #ffffff 0%,#f6f6f6 47%,#ededed 100%); /* Opera11.10+ */
	background: -ms-linear-gradient(top, #ffffff 0%,#f6f6f6 47%,#ededed 100%); /* IE10+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#ededed',GradientType=0 ); /* IE6-9 */
	background: linear-gradient(top, #ffffff 0%,#f6f6f6 47%,#ededed 100%); /* W3C */
	h2 {
	  text-align: left;
	  font-weight: bold;
	  padding: 5px 5px 5px 15px;
	  font-size: 12px;
	  margin: -7px;
	  margin-bottom: 0px;
	  background-color: red;
	  color: #fff;
	}
	ul li {
	  font-size: 12px;
		line-height: 20px;
	}
}
form {
	input {
		font-size: 120%;
		padding: 6px 4px;
		&[type=text], &[type=password], &[type=email] {
			margin-bottom: 1em;
		}
	}
	select {
		font-size: 120%;
		padding: 4px;
		padding-right: 12px;
		margin-bottom: 1em;
	}
	label {
		display: block;
		font-size: 16px;
		color: #333;
		margin-bottom: 0.1875em;
	}
}
div.field, div.actions {
	margin: 16px 0px;
	color: #555;
}
div#main_menu {
	background: #00395a;
	color: white;
	padding: 12px;
	position: relative;
	margin-top: -1px;
  -moz-box-shadow: 0px 0px 4px #111;
	-webkit-box-shadow: 0px 0px 4px #111;
	box-shadow: 0px 0px 4px #111;
	text-shadow: #000 0px 1px 0px;
	a:link, a:visited {
		color: #FFF;
		text-decoration: none;
	}
	a:hover {
		color: #FFF;
		text-decoration: underline;
	}
}
div#profile_links {
	position: absolute;
	top: 12px;
	right: 12px;
}
#admin_container {
	position: relative;
	margin: 0px;
	width: 100%;
}
#admin_menu {
	float: left;
/*	background: #353535;*/
	color: white;
	width: 230px;
	padding: 15px;
/*	border-right: 2px groove #CCC;*/
	h3 {
		font-size: 17px;
		text-shadow: #000 0px 1px 0px;
		margin-bottom: 2px;
		border-bottom: 1px solid #CCC;
		img {
			margin-bottom: 2px;
		}
	}
	ul {
		margin: 0;
		padding: 0;
		margin-bottom: 26px;
		li {	
			border-bottom: 1px dotted #555;
			font-size: 12px;
			line-height: 15px;
			margin: 0px;
		}
	}
	a:link,	a:visited {
		color: #CCC;
		text-decoration: none;
		font-weight: normal;
		display: block;
		padding: 6px;
		margin: 0px;
	}
	a:hover {
		text-decoration: none;
		background: #55565D url(<%= image_path('icons/arrow_right.png') %>) no-repeat;
		background-position: 97% 8px;
		color: white;
		text-shadow: #000 0px 0px 2px;
	}
}
#page_content {
	padding: 15px 40px;
	margin-left: 250px;
}
div.group {
	background: #FFF;
	margin-top: 10px;
	margin-bottom: 20px;
	padding: 5px 18px;
/*	border: 2px groove #C2EBFF;*/
	border: 1px solid #D6E8EE;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
	box-shadow: 2px 2px 5px #E6E6E6;
	h3 {
		color: #666;
		font-size: 16px;
		font-weight: 100;
		line-height: 19px;
	}
}
/***** Sortable *****/
ul.sortable_list {
  margin:4px 0px;
  padding:0px;
	li {
	  margin:0;
	  margin-bottom:4px;
	  padding: 1px 5px 1px 18px;
	  font-size: 14px;
	  /*background-image: url(<%= image_path('icons/drag_handle.gif') %>);*/
	  /*background-repeat: no-repeat;*/
	  /*background-position: 5px 6px;*/
	  cursor:move;
	  list-style: none;
	  color: #888;
	}
}
ul.nosort .handle { 
	display: none;
}
/***** Tables ******/
table.data {
	border-collapse: collapse;
	th {
		padding: 5px 20px;
		text-align: center;
		color: white;
		background: #999;
		text-shadow: #666 0px 1px 0px;
		border: 1px solid #CCC;
		border-bottom: 1px #666 solid;
		a {
			color: white;
		}
	}
	td {
		border: 1px solid #CCC;
		padding: 6px;
	}
}
/***** buttons *******/
.button_container {
	margin: 8px 0px;
}
a { 
	color: #0080FF; 
  &:visited { color: #0080FF; }
	&:hover { 
		color: #6CF; 
	}
	&:link.button, &:visited.button {
		background: {
			color: #444;
			repeat: no-repeat;
		}
		color: white;
		text: {
			decoration: none;
			shadow: #000 0px 1px 0px;
		}
		border-radius: 4px;
		-moz-border-radius: 4px;
		padding: 4px 7px 4px 21px;
		margin-right: 2px;
		font-size: 90%;
	}
	&.new {
		background: {
			image: url(<%= image_path('icons/add_green.png') %>);
			position: 6px 6px;
		}
	}
	&.edit {
		background: {
			image: url(<%= image_path('icons/page.png') %>);
			position: 6px 6px;
		}
	}
	&.delete {
		background: {
			image: url(<%= image_path('icons/delete.png') %>);
			position: 6px 6px;
		}
	}
	&.back {
		background: {
			image: url(<%= image_path('icons/back.png') %>);
			position: 6px 5px;
		}
	}
	&.copy {
		background: {
			image: url(<%= image_path('icons/add_green.png') %>);
			position: 5px;
		}
	}
}
a:hover.button {
	background-color: #000;
}
tr.strike td,
.strike {
	text-decoration: line-through;
}

form.simple_form label {
	display: block;
	padding-top: 10px;
}
