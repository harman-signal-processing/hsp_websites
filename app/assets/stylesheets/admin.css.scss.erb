body { 
	background: #F0F3F4; 
}

.notice, #flash_notice {
	background: #C8FFC6;
	color: #0E9C22;
	border: 1px solid #94D79B;
	border-radius: 4px;
	padding: 3px 8px;
	font-size: 18px;
	line-height: 28px;
}
div.alert, #flash_alert {
	background: #F02;
	color: white;
	padding: 3px 8px;
	font-size: 18px;
	line-height: 28px;
}
pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}
ul.list {
	margin-left: 0;
	padding-left: 0;
	li {
		list-style: none;
		font-size: 12px;
		line-height: 22px;
	}
	&.list {
		margin-left: 16px;
		li {
			list-style: disc;
		}
	}
}
.little, .small, .hint {
	font-size: 9px;
	font-weight: normal;
}
.hint { line-height: 12px; margin: 0; padding: 0;}
.bigger_hint {
	font-size: 12px;
	font-family: "Times New Roman", Times, serif;
	line-height: 15px;
	font-style: oblique;
	color: #222;
}
.instructions {
	background: {
		color: #eaeaea;
	}
	border: 1px solid #dcdcdc;
	font-size: 14px;
	line-height: 22px;
	padding: 10px 16px;
	color: #333;
	text-shadow: 0px 1px 0px #FFF;
	margin-top: 10px;
	margin-bottom: 20px;
	box-shadow: 2px 2px 5px #ebebeb;
}
img {
	border: none;
	vertical-align: middle;
}
.field_with_errors {
	display: inline;
	label {
		color: red;
		display: inline;
		padding: 3px 2px;
	/*	font-weight: bold;*/
		font-size: 110%;
	}
	input, select {
		border: 2px solid red;
	}
}
#errorExplanation {
  width: 400px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
	h2 {
	  text-align: left;
	  font-weight: bold;
	  padding: 5px 5px 5px 15px;
	  font-size: 12px;
	  margin: -7px;
	  background-color: #c00;
	  color: #fff;
	}
	p {
	  color: #333;
	  margin-bottom: 0;
	  padding: 5px;
	}
	ul li {
	  font-size: 12px;
	  list-style: square;
	}
}
#error_explanation {
  width: 450px;
  border: 2px solid red;
	border-radius: 6px;
	-moz-border-radius: 6px;
  padding: 7px;
  padding-bottom: 4px;
  margin-bottom: 20px;
	background: #f6f6f6; /* Old browsers */
	background: -moz-linear-gradient(top, #ffffff 0%, #f6f6f6 47%, #ededed 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(47%,#f6f6f6), color-stop(100%,#ededed)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #ffffff 0%,#f6f6f6 47%,#ededed 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #ffffff 0%,#f6f6f6 47%,#ededed 100%); /* Opera11.10+ */
	background: -ms-linear-gradient(top, #ffffff 0%,#f6f6f6 47%,#ededed 100%); /* IE10+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#ededed',GradientType=0 ); /* IE6-9 */
	background: linear-gradient(top, #ffffff 0%,#f6f6f6 47%,#ededed 100%); /* W3C */
	h2 {
	  text-align: left;
	  font-weight: bold;
	  padding: 5px 5px 5px 15px;
	  font-size: 12px;
	  margin: -7px;
	  margin-bottom: 0px;
	  background-color: red;
	  color: #fff;
	}
	ul li {
	  font-size: 12px;
		line-height: 20px;
	}
}

div.field, div.actions {
	margin: 16px 0px;
	color: #555;
}

div#profile_links {
	position: absolute;
	top: 12px;
	right: 12px;
}
div.group {
	background: #FFF;
	margin-top: 10px;
	margin-bottom: 20px;
	padding: 5px 18px;
/*	border: 2px groove #C2EBFF;*/
	border: 1px solid #D6E8EE;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
	box-shadow: 2px 2px 5px #E6E6E6;
	h3 {
		color: #666;
		font-size: 16px;
		font-weight: 100;
		line-height: 19px;
	}
}
/***** Sortable *****/
ul.sortable_list {
  margin:4px 0px;
  padding:0px;
	li {
	  margin:0;
	  margin-bottom:4px;
	  padding: 1px 5px 1px 18px;
	  font-size: 14px;
	  /*background-image: url(<%= image_path('icons/drag_handle.gif') %>);*/
	  /*background-repeat: no-repeat;*/
	  /*background-position: 5px 6px;*/
	  cursor:move;
	  list-style: none;
	  color: #888;
	}
}
ul.nosort .handle { 
	display: none;
}
/***** Tables ******/
table.data {
	border-collapse: collapse;
	th {
		padding: 5px 20px;
		text-align: center;
		color: white;
		background: #999;
		text-shadow: #666 0px 1px 0px;
		border: 1px solid #CCC;
		border-bottom: 1px #666 solid;
		a {
			color: white;
		}
	}
	td {
		border: 1px solid #CCC;
		padding: 6px;
	}
}
/***** buttons *******/
.button_container {
	margin: 8px 0px;
}

a:hover.button {
	background-color: #000;
}
tr.strike td,
.strike {
	text-decoration: line-through;
}

