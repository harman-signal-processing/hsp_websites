body {
	background: #000;
	text-align: center;
}
div#footer {
	position: fixed;
	bottom: 20px;
	width: 100%;
	text-align: center;
	color: #333;
		font-size: 10px;
	a {
		color: #444;
		text-decoration: none;
		&:hover {
			color: #999;
		}
	}
	div#footer_info {
		position: static;
		text-align: center;
	}
	div#logo {
		text-align: center;
		margin-bottom: 30px;
	}
}
div#middle_container {
	text-align: center;
	margin: 0;
	padding: 0;
	position: absolute;
	left: 0;
	top: 20%;
	width: 100%;
}
