img, div.menu, .pngfix, input { behavior: url("/css/iepngfix.htc") }

html {
	overflow-y: scroll; /* always force a scrollbar in non-IE */
}
body {
	background: #FFF;
	font-family: 'Roboto Condensed', Helvetica, Arial, Verdana, sans-serif;
}
/* foreground */
#parallax-bg3 {
	z-index: 3;
	position: fixed;
	left: 50%; /* align left edge with center of viewport */
	top: 0;
	width: 1200px;
	margin-left: -580px; /* move left by half element's width */
	#bg3-1 {
		position: absolute;
		top: 0px;
		left: 0px;
	}
}

/* midground */
#parallax-bg2 {
	z-index: 2;
	position: fixed;
	left: 50%; /* align left edge with center of viewport */
	top: 480px;
	width: 1200px;
	margin-left: -600px; /* move left by half element's width */
	#bg2-1 {
		position: absolute;
		top: 0px;
		left: 0px;
	}
}

/* background */
#parallax-bg1 {
	z-index: 1;
	position: fixed;
	left: 50%; /* align left edge with center of viewport */
	top: 190px;
	width: 1200px;
	margin-left: -600px; /* move left by half element's width */
	#bg1-1 {
		position: absolute;
		top: 0px;
		left: 0px;
	}
}

@-webkit-keyframes bouncing {
  0% { bottom: 5px; }
  50% { bottom: 8px; }
  100% { bottom: 5px; } 
}

@-moz-keyframes bouncing {
  0% { bottom: 5px; }
  50% { bottom: 8px; }
  100% { bottom: 5px; } 
}

@-ms-keyframes bouncing {
  0% { bottom: 5px; }
  50% { bottom: 8px; }
  100% { bottom: 5px; } 
}

@keyframes bouncing {
  0% { bottom: 5px; }
  50% { bottom: 8px; }
  100% { bottom: 5px; } 
}		

.bouncing-arrow {
  background: url(<%= image_path('dod/arrow.png') %>);
  width: 56px;
  height: 25px;
  position: fixed;
  left: 50%;
  bottom: 5px;
  margin-left: -28px;
  z-index: 1000;
  -webkit-animation: bouncing 750ms infinite;
  -moz-animation: bouncing 750ms infinite;
  -ms-animation: bouncing 750ms infinite;
  animation: bouncing 750ms infinite; 
}
h1#title {
	font-family: 'Roboto Condensed', Helvetica, Arial, sans-serif;
	font-weight: 700;
	width: 1060px;
	margin-top: 0px;
	text-align: center;
	position: fixed;
	top: 0px;
	left: 50%;
	margin-left: -530px;
	z-index: 9999;
	font-size: 130px;
	letter-spacing: -0.04em;
	color: #000;
	overflow: hidden;
}

div#main-content {
	margin-top: 3050px;
	p {
		font-weight: 300;
		font-size: 16px;
		color: #555;
	}
}

div#logo {
	margin-bottom: 6px;
	img {
		width: 150px;
	}
}

div#footer {

	width: 100%;
	text-align: center;
	color: #777;
	font-size: 10px;
	font-family: Helvetica, Arial, sans-serif;
	padding: 60px;
	background-color: #FFF;
	a {
		color: #777;
		&:hover {
			color: #444;
		}
	}
	div#footer_info {
		position: static;
		text-align: center;
	}
}

@media only screen and (max-width: 768px) {
	h1#title {
		font-size: 50px;
		overflow: auto;
		background-color: #FFF;
	}
	div#logo {
		margin-top: 10px;
	}
	div#main-content {
		margin-top: 2320px;
		background-color: #FFF;
	}
	#parallax-bg3 {
		margin-left: -680px; 
	}
}