div#content_container {
	background: url(<%= image_path('digitech/snakecharmer/page_bg.png') %>) repeat-y bottom;
	padding-bottom: 4px;
}

div#introducing {
	h1 {
		margin-top: -20px;
		margin-left: -10px;
	}
	a:link, a:visited {
		color: #ff6000;
		font-weight: bold;
	}
	section {
		font-size: 13px;
		line-height: 18px;
		padding: 12px 10px;
		margin: 4px;
		color: #FFF;
		background: url(<%= image_path('digitech/snakecharmer/box_bg.png') %>);
		h2, h3 {
			color: #ff6000;
			text-shadow: 0px 1px 1px #000;
			font-size: 33px;
			line-height: 34px;
			margin-bottom: 2px;
		}
		h3 {
			font-size: 16px;
			line-height: 20px;
		}
		h4 {
			color: #CCC;
			font-weight: normal;
			text-transform: uppercase;
			font-size: 14px;
			line-height: 16px;
			margin-bottom: 10px;
		}
		h5 {
			color: #ff6000;
			margin-top: 8px;
			font-weight: bold;
		}
		.text_content {
			margin: 10px 0px;
		}
		&#istomp_content h5 {
			text-transform: capitalize;
		}
	}
	div.middle_content_container {
		height: 405px;
		section {
			&#product_content {
				float: left;
				width: 500px;
				height: 370px;
				overflow: hidden;
			}
			&#istomp_content {
				float: right;
				width: 380px;
				height: 370px;
				overflow: hidden;
			}
		}
	}
	.hint {
		color: #fff;
		text-shadow: 1px 1px 2px #000;
		font-style: normal;
	}
}