<% if fb = website.value_for("facebook") %>
	<div style="padding-left: 20px;">
	<h3 style="text-align: center"><%= social_media_links 'facebook' %> 
	<%= link_to t('titles.facebook_page', brand: website.brand_name), fb, target: "_blank" %></h3>
	<div class="fb-like-box" data-href="<%= fb %>" data-width="300" data-colorscheme="dark" data-show-faces="true" data-border-color="#222" data-stream="true" data-header="false"></div>
	</div>
<% end %>
