<%= content_for :breadcrumbs do %>
  <li><%= link_to @brand.name, [:toolkit, @brand] %></li>
  <li><%= link_to "#{@brand.name} Products", toolkit_brand_products_path(@brand) %></li>
  <li class="current"><%= link_to @product.name %></li>
<% end %>

<%= render "toolkit/brands/left_nav" %>

<%= content_for :title do %><%= @brand.name %> <%= @product.name %><% end %>

<h1><%= @product.name %> <small><%= @product.short_description %></small></h1>

<h4 class="subheader">Product Images <small>click for full-size images</small></h4>
<div class="row">
	<% @images.each do |pa| %>
	<div class="column <%='end' if pa == @images.last %>">
		<%= link_to(image_tag(pa.product_attachment.url(:tiny)), pa.product_attachment.url) %>
	</div>
	<% end %>
</div>

<div class="row">
	<div class="six columns">
		<h4 class="subheader">Description</h4>
		<div class="description"><%= raw @product.description %></div>
	</div>
	<div class="six columns">
		<h4 class="subheader">Features</h4>
		<div class="description"><%= raw @product.features %></div>
	</div>
</div>

<div class="row">
	<div class="six columns">
		<h4 class="subheader">Ads &amp; Promos</h4>
		<ul class="disc">
			<% @product.current_and_recently_expired_promotions.each do |promo| %>
				<li><%= link_to promo.name, [:toolkit, @brand, promo] %></li>
			<% end %>
		</ul>
	</div>
	<div class="six columns">
		<h4 class="subheader">Downloads &amp; Documentation</h4>
		<% if @product.product_documents.count > 0 %>
		<%= render "/products/documentation", product: @product %>
		<% end %>
		<% if @product.softwares.count > 0 %>
		<%= render "/products/downloads", product: @product %>
		<% end %>
	</div>
</div>