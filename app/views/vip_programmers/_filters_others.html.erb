
<div id="vipOtherFilters" <%=get_filter_display_style%>>
	
	<!-- Service Categories -->
	<ul class="button-group round">
		<li><%= link_to 'All Categories', vip_programmers_path(request.query_parameters.except("service_category")), class: "tiny button round #{'success' if @service_category.nil? }" %></li>
		<% @all_categories.each do |category|%>
			<li><%= link_to category.name, vip_programmers_path(request.query_parameters.merge({ service_category: category.name })), class: "tiny button round #{'success' if @service_category == category.name }" %></li>
		<% end %>
	</ul>
	
