<% contrio = ProductFamily.find("soundweb-contrio") %>

<% if contrio %>
<div class="homepage_block dark contrio-strip">
  <%= link_to contrio do %>
    <div class="row">
      <div class="large-9 small-7 columns">
        <h1>
          <%= raw website.contrio_title %>
        </h1>
        <%= image_tag("#{website.folder}/BSSContrioControllerStrip_logo.png")%>
      </div>
      <div class="large-3 small-5 columns text-left">
        <%= image_tag("#{website.folder}/BSSContrioControllerStrip_control.png")%>
      </div>
    </div>
  <% end %>
</div>
<% end %>
