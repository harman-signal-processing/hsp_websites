<%= cache ["training_strip", website.brand, I18n.locale] do %>
  <div class="homepage_block gray_strip text-center">
    <div class="row">
      <div class="large-5 large-centered medium-7 medium-centered small-8 small-centered columns">
        <div class="large-4 small-4 columns">
          <%= image_tag("#{website.folder}/shield.png", alt: "") %>
        </div>
        <div class="large-8 small-8 columns">
          <h1 class="text-left"><%=raw website.training_title %></h1>
        </div>
      </div>
    </div>
    <p>&nbsp;</p>
    <div class="row">
      <div class="large-4 medium-4 small-12 columns text-center">
        <%= image_tag("#{website.folder}/self-paced.png", alt: "Self-paced Training") %>
        <%=raw website.training_column_1 %>
      </div>
      <div class="large-4 medium-4 small-12 columns text-center">
        <%= image_tag("#{website.folder}/online.png", alt: "Online Training") %>
        <%=raw website.training_column_2 %>
      </div>
      <div class="large-4 medium-4 small-12 columns text-center">
        <%= image_tag("#{website.folder}/live.png", alt: "Live Training") %>
        <%=raw website.training_column_3 %>
      </div>
    </div>
    <br/>
    <%= link_to website.training_button, '//bssaudio.com/training', class: "large button" %>
  </div>
<% end %>
