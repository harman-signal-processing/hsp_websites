<%= cache ["nav_items", website, I18n.locale, Date.today] do %>
  <li class="has-dropdown"><%= link_to "our story", "ourstory" %>
    <ul class="dropdown">
      <li><%= link_to "About HARMAN", "/ourstory#about_harman" %></li>
      <li><%= link_to "About Crown", "/ourstory#about_crown" %></li>
      <li><%= link_to "Quality", "/ourstory#quality" %></li>
      <li><%= link_to "Technology", "/ourstory#technology" %></li>
      <li><%= link_to "Crown Around The World", "/crown_around_the_world" %></li>
    </ul>
  </li>

  <li class="divider"></li>
	<li class="has-dropdown"><%= link_to t('products'), product_families_path %>
		<ul class="dropdown">
			<% ProductFamily.parents_with_current_products(website, I18n.locale).each do |product_family| %>
				<%= product_family_nav_links(product_family) %>
			<% end %>
			<!-- <li><%#= link_to "Promotions", promotions_path %></li> -->
		</ul>
	</li>

	<% if website.has_artists? %>
	<li class="divider"></li>
	<li><%= link_to t('artists'), artists_path %></li>
	<% end %>

	<% if website.has_dealers? || website.has_distributors? || website.has_online_retailers? %>
	<li class="divider"></li>
	<li><%= link_to t('where_to_buy'), where_to_buy_path %></li>
	<% end %>

	<li class="divider"></li>
	<li><%= link_to "media hub", "/mediahub" %></li>

	<li class="divider"></li>
  <li class="has-dropdown"><%= link_to t('product_support'), support_path %>
    <ul class="dropdown">
      <li><%= link_to "Amp/Speaker Selector (coming soon)" %></li>
      <li><%= link_to "Authorized Service Information" %></li>
      <li><%= link_to "Contact Us", support_path %></li>
      <li><%= link_to "FAQs", "/faqs" %></li>
      <% if !!(website.forum_link) %>
      <li><%= link_to t("forum"), website.forum_link %></li>
      <% end %>
      <li><%= link_to "System Design Tool" %></li>
      <li><%= link_to "Technical Support", support_path %></li>
    </ul>
  </li>

  <%= extra_top_nav_links(divider: true) %>

<% end %>
