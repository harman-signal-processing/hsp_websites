<%= cache ["nav_items", website.brand, I18n.locale, Date.today] do %>
  <li class="has-dropdown hide-for-medium"><%= link_to t("nav.our_story").titleize, "/#{I18n.locale}/ourstory" %>
    <ul class="dropdown">
      <li><%= link_to t("nav.about").titleize, "/#{I18n.locale}/ourstory" %></li>
      <li><%= link_to t("nav.quality").titleize, "/#{I18n.locale}/quality" %></li>
      <li><%= link_to t("nav.technology").titleize, "/#{I18n.locale}/technology" %></li>
      <li><%= link_to t("nav.crown_around_the_world").titleize, "/#{I18n.locale}/aroundtheworld" %></li>
    </ul>
  </li>

  <li class="divider"></li>
	<li class="has-dropdown"><%= link_to t('products').titleize, product_families_path %>
		<ul class="dropdown">
      <li class="has-dropdown"><%= link_to t("nav.amplifiers").titleize, product_families_path %>
        <ul class="dropdown">
          <%
            amp_families = ProductFamily.parents_with_current_products(website, I18n.locale)
          %>
          <% amp_families.each do |product_family| %>
            <% unless product_family.hide_from_homepage? %>
              <%= product_family_nav_links(product_family, depth: 1) %>
            <% end %>
          <% end %>
        </ul>
      </li>
      <% MarketSegment.with_current_products(website, I18n.locale).each do |market_segment| %>
        <li class="has-dropdown"><%= link_to translate_content(market_segment, :name), market_segment, class: "disabled" %>
          <ul class="dropdown">
            <% market_segment.product_families_with_current_products.each do |product_family| %>
              <%= product_family_nav_links(product_family, depth: 1) %>
            <% end %>
            <% if market_segment.name.to_s.match(/commercial/i) %>
              <li><%= link_to "JBL Commercial", "http://www.jblcommercialproducts.com/", target: "_blank" %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
      <% amp_families.each do |product_family| %>
        <% if product_family.hide_from_homepage? %>
          <%= product_family_nav_links(product_family, depth: 1) %>
        <% end %>
      <% end %>

      <li><%= link_to t("nav.microphones").titleize, "/#{I18n.locale}/akg-mics" %></li>
      <% if I18n.locale == I18n.default_locale && (website.has_dealers? || website.has_distributors? || website.has_online_retailers?) %>
        <li><%= link_to "Promotions", promotions_path %></li>
      <% end %>
			<li><%= link_to t('discontinued_products').titleize, discontinued_products_path %></li>
		</ul>
	</li>

  <% if website.has_solution_pages? && I18n.locale.to_s.match(/en/i) %>
    <%= render_partial "shared/solutions_nav" %>
  <% end %>

  <li class="divider"></li>
  <li class="has-dropdown"><%= link_to t('nav.network_audio').titleize, "/#{I18n.locale}/network-audio" %>
    <ul class="dropdown">
      <li><%= link_to "About Our Solutions", "/#{I18n.locale}/network-audio" %></li>
      <li><%= link_to "BLU link", "/#{I18n.locale}/network-audio#blu-link" %></li>
      <li><%= link_to "Dante", "/#{I18n.locale}/network-audio#dante" %></li>
      <li><%= link_to "CobraNet", "/#{I18n.locale}/network-audio#cobranet" %></li>
      <li><%= link_to "AVB", "/#{I18n.locale}/network-audio#avb" %></li>
    </ul>
  </li>

	<% if website.has_dealers? || website.has_distributors? || website.has_online_retailers? %>
    <li class="divider"></li>
    <li><%= link_to t('where_to_buy').titleize, where_to_buy_path %></li>
	<% end %>

	<li class="divider hide-for-medium"></li>
  <li class="hide-for-medium"><%= link_to t('news').titleize, news_index_path %></li>

  <% if website.has_events? %>
    <li class="divider hide-for-medium"></li>
    <li><%= link_to t('events'), events_path %></li>
  <% end %>

	<li class="divider"></li>
  <li class="has-dropdown"><%= link_to t('product_support').titleize, support_path %>
    <ul class="dropdown">
      <li><%= link_to "Authorized Service Information", "/authorizedserviceinformation" %></li>
      <li><%= link_to "Contact Us", support_path %></li>
      <li><%= link_to "Downloads", support_downloads_path %></li>
      <% if website.faq_categories_with_faqs.length > 0 %>
        <li><%= link_to "FAQs", faqs_path %></li>
      <% end %>
      <% if !!(website.forum_link) %>
      <li><%= link_to t("forum").titleize, website.forum_link %></li>
      <% end %>
      <% if website.has_product_registrations? %>
        <li><%= link_to t("warranty_registration").titleize, warranty_registration_path %></li>
      <% end %>
      <li class="has-dropdown"><%= link_to "Service", '#', class: "disabled" %>
        <ul class="dropdown">
          <li><%= link_to "Service Centers", support_path(action: "service_lookup") %></li>
          <li><%= link_to "Returns", rma_request_path %></li>
          <li><%= link_to "Parts", parts_request_path %></li>
          <li><%= link_to "Warranty", warranty_policy_path %></li>
        </ul>
      </li>
      <li><%= link_to t('software_downloads').titleize, software_index_path %></li>
      <li><%= link_to "System Design Tools", tools_calculators_path %></li>
      <li><%= link_to "Technical Support", "/techsupport" %></li>
    </ul>
  </li>

  <%= extra_top_nav_links(divider: true) %>

<% end %>
