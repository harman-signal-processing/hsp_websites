<h1>Shopping Cart <%= fa_icon "shopping-cart" %></h1>
<br/>
<% if @shopping_cart.empty? %>
  <p>Your shopping cart is empty. Please add items to your cart to continue.</p>
<% else %>
  <table class="cart_summary">
    <thead>
      <tr>
        <td colspan="2">&nbsp;</td>
        <th class="text-center">Qty.</th>
        <th class="text-right">Item Price</th>
        <th class="text-right">Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @shopping_cart.line_items.each do |line_item| %>
        <tr>
          <td class="text-center">
            <% if line_item.product.photo %>
              <%= link_to line_item.product do %>
                <%= image_tag(line_item.product.photo.product_attachment.url(:tiny)) %>
              <% end %>
            <% end %>
          </td>
          <td>
            <%= link_to line_item.product.name, line_item.product %>
            <% if line_item.product.digital_ecom? %>
              <br/><small>Instant electronic delivery.</small>
            <% end %>
          </td>
          <td class="text-center">
            <%= simple_form_for line_item do |f| %>
              <div class="row collapse">
                <div class="small-1 medium-2 medium-offset-3 columns">
                  <%= link_to remove_from_cart_path(line_item.product), class: "remove-item", id: "remove-#{line_item.product.id}" do %>
                    <%= fa_icon "trash-o" %>
                  <% end %>
                </div>
                <div class="small-7 medium-2 columns">
                  <%=f.input :quantity, label: false, input_html: { min: "0" } %>
                </div>
                <div class="small-4 medium-2 columns end">
                  <%= f.submit "update", class: "button" %>
                </div>
              </div>
            <% end %>
          </td>
          <td class="text-right">
            <%= number_to_currency line_item.price %>
          </td>
          <td class="text-right">
            <%= number_to_currency line_item.subtotal %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="small-12 medium-6 large-9 columns">
      <% if @shopping_cart.has_digital_downloads? %>
        <p><i><small>Software activation requires use of <a href="https://ilok.com" target="_blank">iLok physical license key dongle</a>.</small></i></p>
      <% end %>
    </div>
    <div class="small-12 medium-6 large-3 columns">
      <table class="cart_totals">
        <tfoot>
          <tr>
            <td class="text-right">Total:</td>
            <td class="text-right"><%= number_to_currency @shopping_cart.total %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <div class="text-right">
    <%= link_to checkout_path, class: "large success button" do %>
      <%= fa_icon "credit-card" %>
      Checkout
    <% end %>
  </div>

<% end %>

