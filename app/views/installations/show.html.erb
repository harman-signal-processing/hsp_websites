<% set_meta_tags reverse: true,
                 title: translate_content(@installation, :title),
                 description: translate_content(@installation, :description),
                 keywords: @installation.keywords %>

<% if @installation.layout_class == "full" %>
  <%= content_for :feature do %>
    <%= raw translate_content(@installation, :body) %>
  <% end %>
<% else %>
  <div class="content container">
    <div class="row">
      <% if @installation.layout_class == "wide" %>
        <div class="large-12 columns text-content">
      <% else %>
        <div class="large-8 columns large-offset-2 text-content">
      <% end %>
        <%=raw translate_content(@installation, :body) %>
      </div>
    </div>
  </div>
<% end %>

<%= content_for :custom_css do %>
	<style type="text/css">
		<%=raw @installation.custom_css %>
	</style>
<% end %>

<% if current_user && can?(:manage, @installation) %>
<div class="admin_function">
	<%= link_to "edit", edit_admin_installation_path(@installation) %>
</div>
<% end %>
