<h1>Listing News</h1>

<% if can? :create, News %>
<div class="button_container">
	<%= link_to 'New news', new_admin_news_path, class: "new button" %>
</div>
<% end %>

<%= search_form_for [:admin, @search] do |f| %>
  <div class="form_field">
    <%= f.label :title_cont, "Title contains" %><br/>
    <%= f.text_field :title_cont %>
    <%= f.submit "Search news" %>
  </div>
<% end %>

<table class="data" style="width: 100%">
  <tr>
    <th>Post Date</th>
    <th>Title</th>
  </tr>

<% @news.each do |news| %>
  <tr style="background: <%= cycle 'white', 'none' %>">
    <td><%=l news.post_on, format: :short %></td>
    <td><%=link_to truncate(news.title, length: 100), [:admin, news] %></td>
  </tr>
<% end %>
</table>
