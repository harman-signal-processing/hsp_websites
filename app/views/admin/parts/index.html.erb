<h1>Listing Parts</h1>

<% if can? :create, Part %>
<ul class="button-group round">
	<li><%= link_to 'New Part', new_admin_part_path, class: "small success button" %></li>
</ul>
<% end %>

<ul class="large-block-grid-6 small-block-grid-3">
	<% @parts.find_each do |part| %>
    <li><%= link_to part.part_number, [:admin, part] %></li>
	<% end %>
</ul>
