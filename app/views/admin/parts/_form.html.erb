<%= simple_form_for [:admin, @part] do |f| %>
  <%= f.input :part_number %>
  <%= f.input :description %>
  <%= f.association :parent, label_method: :part_number %>

  <%= f.input :photo %>
	<% if f.object.photo_file_name.present? %>
		<span class="hint"><i>currently: <%= link_to image_tag(f.object.photo.url(:medium), lazy: false), f.object.photo.url(:medium), target: "_blank" %></i></span>
	<% end %>

  <br/><%= f.button :submit %>
<% end %>
