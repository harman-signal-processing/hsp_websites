<h1>System: <%= @system.name %></h1>

<ul class="button-group round">
	<li><%= link_to 'Back', admin_systems_path, class: "small secondary button" %>	</li>
	<li><%= link_to 'Edit', edit_admin_system_path(@system, locale: I18n.locale), class: "small secondary button" %></li>
	<li><%= link_to 'Delete', [:admin, @system], confirm: 'Are you sure?', method: :delete, class: "small alert button" %> </li>
</ul>

<h3 class="subheader">Options
	<small><%= link_to new_admin_system_system_option_path(@system) do %>
			<%= image_tag "icons/add_green.png" %>
			add an option
		<% end %>
	</small>
</h3>
<ul class="list">
	<% @system.system_options.each do |system_option| %>
	<li><%= link_to system_option.name, [:admin, @system, system_option] %></li>
	<% end %>
</ul>

<h3 class="subheader">Rules
	<small><%= link_to new_admin_system_system_rule_path(@system) do %>
				<%= image_tag "icons/add_green.png" %>
				add a rule
			<% end %>
	</small>
</h3>
<ul class="list">
	<% @system.system_rules.each do |system_rule| %>
	<li><%= link_to system_rule.name, edit_admin_system_system_rule_path(@system, system_rule) %></li>
	<% end %>
</ul>
