(function(){
	var $product_families_dropdown = $('#product_family_testimonial_product_family_id');

	// clear the product list before we rebuild it
	$product_families_dropdown.empty();

	// rebuild product dropdown list
	$product_families_dropdown.append($("<option></option>"));

	<% ProductFamily.options_not_associated_with_this_testimonial(@product_family_testimonial.testimonial, website).sort_by(&:name).each do |product_family| %>
		$product_families_dropdown.append($("<option value='<%=product_family.id%>'><%= CGI.unescapeHTML(product_family.name)%></option>"));
	<% end %>

	// let chosen know the product dropdown list has been updated
	$product_families_dropdown.trigger('chosen:updated');
})();
