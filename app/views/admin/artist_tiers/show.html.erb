<h1>Artist Tier</h1>

<ul class="button-group round">
	<li><%= link_to 'Back', admin_artist_tiers_path, class: "small secondary button" %></li>
	<li><%= link_to 'Edit', edit_admin_artist_tier_path(@artist_tier), class: "small secondary button" %></li>
	<li><%= link_to 'Delete', [:admin, @artist_tier], confirm: 'Are you sure?', method: :delete, class: "small alert button" %></li>
</ul>

<p>
  <b>Name:</b>
  <%= @artist_tier.name %>
</p>

<p>
  <b>Invitation code:</b>
  <%= @artist_tier.invitation_code %>
</p>
