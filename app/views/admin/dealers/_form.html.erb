<%= simple_form_for([:admin, @dealer]) do |f| %>

   <%= f.input :name %>
   <%= f.input :address %>
   <%= f.input :city %>
   <%= f.input :state %>
   <%= f.input :zip %>
   <%= f.input :country %>
   <%= f.input :telephone %>
   <%= f.input :fax %>
   <%= f.input :email %>
   <%= f.input :website %>
   <%= f.input :google_map_place_id %>
   <%= f.input :resale %>
   <%= f.input :rental %>
   <%= f.input :installation %>
   <%= f.input :service %>
   <%= f.input :represented_in_country %>
   <%= f.input :account_number %>
   <%= f.input :lat, label: "Latitude",
     hint: "The application will try to find the coordinates, but if it fails, try filling them in here. You should be able to get them with the Google." %>
   <%= f.input :lng, label: "Longitude" %>
   <%= f.input :exclude, label: "Exclude from site listings" %><br/>

  <br/><%= f.button :submit %>

<% end %>
