<h1><%= @audio_demo.name %></h1>

<ul class="button-group round">
	<li><%= link_to 'Back', admin_audio_demos_path, class: "small secondary button" %></li>
	<li><%= link_to 'Edit', edit_admin_audio_demo_path(@audio_demo, locale: I18n.locale), class: "small secondary button" %> </li>
	<li><%= link_to 'Delete', [:admin, @audio_demo], confirm: 'Are you sure?', method: :delete, class: "small alert button" %> </li>
</ul>

<div><%= @audio_demo.description %></div>

<% unless @audio_demo.wet_demo_file_name.blank? %>
<div class="field">
	Wet Demo: <%= link_to @audio_demo.wet_demo_file_name, @audio_demo.wet_demo.url %>
</div>
<% end %>

<% unless @audio_demo.dry_demo_file_name.blank? %>
<div class="field">
	Dry Demo: <%= link_to @audio_demo.dry_demo_file_name, @audio_demo.dry_demo.url %>
</div>
<% end %>

<div class="group">
	<h3>Products Showing This Demo</h3>
	<%= form_for [:admin, @product_audio_demo], remote: true do |f| %>
		<%= hidden_field_tag "called_from", "audio_demo" %>
    	<%= f.hidden_field :audio_demo_id %>
		<%= f.collection_select :product_id, website.products, :id, :name %> 
		<%= submit_tag 'add product', class: "small round button" %>
	<% end %>

	<ul id="product_audio_demos">
		<% @audio_demo.product_audio_demos.each do |pad| %>
			<%= render '/admin/shared/product_audio_demo_row', pad: pad, called_from: 'audio_demo' %>
		<% end %>
	</ul>
</div>
