<h1>Audio Demos</h1>
<% if can? :create, AudioDemo %>
<div class="button_container">
	<%= link_to 'New Demo', new_admin_audio_demo_path, :class => "new button" %>
</div>
<% end %>

<ul>
<% @audio_demos.each do |audio_demo| %>
  <li><%= link_to audio_demo.name, [:admin, audio_demo] %></li>
<% end %>
</ul>
