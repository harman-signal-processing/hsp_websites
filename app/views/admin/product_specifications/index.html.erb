<h1>Listing product_specifications</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Specification</th>
    <th>Value</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_specifications.each do |product_specification| %>
  <tr>
    <td><%= product_specification.product_id %></td>
    <td><%= product_specification.specification_id %></td>
    <td><%= product_specification.value %></td>
    <td><%= product_specification.position %></td>
    <td><%= link_to 'Show', [:admin, product_specification] %></td>
    <td><%= link_to 'Edit', edit_admin_product_specification_path(product_specification) %></td>
    <td><%= link_to 'Delete', [:admin, product_specification], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

