<% called_from ||= "product" %>
<li id="product_effect_<%= pe.id %>">
	<%= (called_from == "product") ? 
		link_to(pe.effect.name, edit_admin_effect_path(pe.effect)) :
		link_to(pe.product.name, [:admin, pe.product]) %>
	<%= link_to(image_tag('icons/trash.gif'),
		  admin_product_effect_path(pe),
		  remote: true,
		  confirm: "Are you sure you want to delete this effect?",
		  method: :delete) %>
</li>