<% unless pp.new_record? %>
  <% called_from ||= "product" %>
  <li id="product_part_<%= pp.id %>">
    <%= (called_from == "product") ?
      link_to(pp.part.part_number, [:admin, pp.part]) :
      link_to(pp.product.name, [:admin, pp.product]) %>
    <%= link_to(image_tag('icons/trash.gif', lazy: false),
        admin_product_part_path(pp, called_from: called_from),
        remote: true,
        confirm: "Are you sure you want to delete this product-part?",
        method: :delete) %>
  </li>
<% end %>
