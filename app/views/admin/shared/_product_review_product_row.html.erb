<% called_from ||= 'product' %>
<li id="product_review_product_<%= prp.id %>">
	<%= (called_from == 'product') ? 
			link_to(prp.product_review.title, [:admin, prp.product_review]) : 
			link_to(prp.product.name, [:admin, prp.product]) %> 
	<%= link_to(image_tag("icons/trash.gif"), 
			admin_product_review_product_path(prp), 
			confirm: "Are you sure? (This won't delete the product or the review--it will only remove the association.)", 
			remote: true,
			method: :delete) %>
</li>