<% called_from ||= 'vip_programmer' %>
<li id="vip_programmer_training_<%= association.id %>">
	<% if (called_from == 'vip_programmer') %><span class="handle"><%= image_tag("icons/drag_handle.gif") %></span><% end %>
	<%= (called_from == 'vip_programmer') ? link_to(association.training.name, [:admin, association.training]) : link_to(association.programmer.name, [:admin, association.programmer]) %> 
	<%= link_to(image_tag("icons/trash.gif"), 
			admin_vip_programmer_training_path(association), 
			confirm: "Are you sure? (This won't delete the training --it will only remove the association.)", 
			remote: true,
			method: :delete) %>
</li>
