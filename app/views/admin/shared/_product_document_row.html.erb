<% unless pd.new_record? %>
  <% called_from ||= 'product' %>
  <li id="product_document_<%= pd.id %>">
    <span class="handle"><%= image_tag("icons/drag_handle.gif", lazy: false) %></span>
    <%= (called_from == 'product') ?
        link_to(pd.name(hide_product_name: true), [:admin, pd]) :
        link_to(pd.product.name, [:admin, pd.product]) %>
    <%= link_to(image_tag("icons/trash.gif", lazy: false),
        admin_product_document_path(pd),
        remote: true,
        confirm: "Are you sure?",
        method: :delete) %>
    <% if called_from == 'product' && pd.bad_link? %>
      <span class="alert label">bad link!</span>
    <% end %>
  </li>
<% end %>
