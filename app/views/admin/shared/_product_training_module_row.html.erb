<% called_from ||= "product" %>
<li id="product_training_module_<%= ptm.id %>">
	<span class="handle"><%= image_tag("icons/drag_handle.gif", lazy: false) %></span>
	<%= (called_from == "product") ?
		link_to(ptm.training_module.name, edit_admin_training_module_path(ptm.training_module)) :
		link_to(ptm.product.name, [:admin, ptm.product]) %>
	<%= link_to(image_tag('icons/trash.gif', lazy: false),
		  admin_product_training_module_path(ptm),
		  remote: true,
		  confirm: "Are you sure?",
		  method: :delete) %>
</li>
