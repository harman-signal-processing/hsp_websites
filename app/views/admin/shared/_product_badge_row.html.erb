<% unless pb.new_record? %>
  <% called_from ||= "product" %>
  <li id="product_badge_<%= pb.id %>">
    <%= (called_from == "product") ?
      link_to(pb.badge.name, [:admin, pb.badge]) :
      link_to(pb.product.name, [:admin, pb.product]) %>
    <%= link_to(image_tag('icons/trash.gif', lazy: false),
        admin_product_badge_path(pb, called_from: called_from),
        remote: true,
        confirm: "Are you sure you want to delete this badge?",
        method: :delete) %>
  </li>
<% end %>
