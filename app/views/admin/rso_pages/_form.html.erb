<%= form_for([:admin, @rso_page]) do |f| %>
  <% if @rso_page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rso_page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @rso_page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => "mceEditor" %>
  </div>
  <% if @rso_page.new_record? %>
  <div class="field">
	<%= f.check_box :add_to_nav %>
	<%= f.label :add_to_nav, "Add this page to the RSO site navigation (top nav) for #{website.brand_name}." %><br/>
	<%= f.check_box :add_to_left_panel %>
	<%= f.label :add_to_left_panel, "Add this page to the left panel of the #{website.brand_name} RSO page." %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
