<h1>Listing FAQs</h1>

<% if can? :create, Faq %>
<ul class="button-group round">
	<li><%= link_to 'New FAQ', new_admin_faq_path, class: "small success button" %></li>
</ul>
<% end %>

<ul>
<% @faqs.each do |faq| %>
	<% if faq.product %>
  		<li><%= link_to "#{faq.product.name}: #{faq.question}", [:admin, faq] %></li>
    <% else %>
		<li><%= link_to faq.question, [:admin, faq] %></li>
	<% end %>
<% end %>
</ul>


