<h1>FAQ</h1>

<ul class="button-group round">
	<li><%= link_to admin_faqs_path, class: "small secondary button" do %>
    <%= fa_icon "angle-double-left" %>
  <% end %>
  </li>
	<li><%= link_to edit_admin_faq_path(@faq), class: "small secondary button" do %>
      <%= fa_icon "edit" %>
      Edit
    <% end %>
  </li>
	<li><%= link_to [:admin, @faq], confirm: 'Are you sure?', method: :delete, class: "small alert button" do %>
    <%= fa_icon "trash" %>
    Delete
  <% end %>
  </li>
</ul>

<p><b>Question:</b>
  <%=raw @faq.question %>
</p>

<p><b>Answer:</b></p>
<div><%=raw @faq.answer %></div>
<hr/>
<p>
  <b>Product:</b>
  <%= (@faq.product) ? link_to(@faq.product.name, [:admin, @faq.product]) : "none" %>
</p>

<p>
  <b>Categories:</b>
</p>

<ul>
  <% @faq.faq_categories.each do |cat| %>
    <li><%= link_to cat.name, [:admin, cat] %></li>
  <% end %>
</ul>


