<h1>FAQ</h1>

<ul class="button-group round">
	<li><%= link_to 'Back', admin_faqs_path, class: "small secondary button" %></li>
	<li><%= link_to 'Edit', edit_admin_faq_path(@faq), class: "small secondary button" %> </li>
	<li><%= link_to 'Delete', [:admin, @faq], confirm: 'Are you sure?', method: :delete, class: "small alert button" %></li>
</ul>

<p>
  <b>Product:</b>
  <%= (@faq.product) ? link_to(@faq.product.name, [:admin, @faq.product]) : "none" %>
</p>

<p><b>Question:</b></p>
  <%=raw @faq.question %>

<p><b>Answer:</b></p>
  <%=raw @faq.answer %>

<p>
  <b>Hidden?</b>
  <%= @faq.hidden %>
</p>

