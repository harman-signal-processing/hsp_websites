<%= simple_form_for([:admin, @product_document], html: {multipart: true}) do |f| %>

  <%= f.association :product, collection: website.products %>
  <div class="row">
    <div class="large-6 columns">
      <%= f.input :document_type, collection: HarmanSignalProcessingWebsite::Application.config.document_types %>
    </div>
    <div class="large-6 columns">
      <%= f.input :language, collection: HarmanSignalProcessingWebsite::Application.config.document_languages %>
    </div>
  </div>
  <%= f.input :name_override, hint: "Overrides the auto-generated link name. (optional)" %>
  <%= f.input :show_on_public_site, label: "Show on public site in the downloads area" %>
  <%= f.input :document, label: "Upload new document" %>

	<% if !f.object.document_file_name.blank? %>
	<p>
	  <b>Current document:</b>
	  <%= link_to f.object.document_file_name, f.object.document.url, target: "_blank" %>
	</p>
	<% end %>

  <br/><%= f.button :submit %>
<% end %>
