<h1><%= @service_center.name %></h1>

<ul class="button-group round">
	<li><%= link_to admin_service_centers_path, class: "small secondary button" do %>
    <%= fa_icon "angle-double-left" %>
  <% end %>
  </li>
	<li><%= link_to edit_admin_service_center_path(@service_center), class: "small secondary button" do %>
      <%= fa_icon "edit" %>
      Edit
    <% end %>
  </li>
	<li><%= link_to [:admin, @service_center], confirm: 'Are you sure?', method: :delete, class: "small alert button" do %>
    <%= fa_icon "trash" %>
    Delete
  <% end %>
  </li>
</ul>

<p>
  <b>Address:</b>
  <%= @service_center.address %><br/>
  <%= @service_center.city %>,  <%= @service_center.state %>
  <%= @service_center.zip %>
</p>

<p>
  <b>Telephone:</b>
  <%= @service_center.telephone %>
</p>

<p>
  <b>Fax:</b>
  <%= @service_center.fax %>
</p>

<p>
  <b>Email:</b>
  <%= @service_center.email %>
</p>

<p>
	<b>Website:</b>
	<%= @service_center.website %>
</p>

<p>
  <b>Account number:</b>
  <%= @service_center.account_number %>
</p>

<p>
  <b>Lat:</b>
  <%= @service_center.lat %>
</p>

<p>
  <b>Lng:</b>
  <%= @service_center.lng %>
</p>
