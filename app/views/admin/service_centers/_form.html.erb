<%= simple_form_for([:admin, @service_center]) do |f| %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :zip %>
  <%= f.input :telephone %>
  <%= f.input :fax %>
  <%= f.input :email %>
	<%= f.input :website %>
  <%= f.input :account_number %>
  <% if !!(website.brand.has_vintage_repair?) %>
    <%= f.input :vintage, label: "Show on vintage repair page" %>
  <% end %>
  <%= f.input :lat %>
  <%= f.input :lng %>
  <br/><%= f.button :submit %>

<% end %>
