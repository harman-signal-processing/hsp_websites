<%= simple_form_for([:admin, @us_rep]) do |f| %>
  <div class="row">
    <div class="medium-6 columns">
      <%= f.input :name %>
    </div>
    <div class="medium-6 columns">
      <%= f.input :contact %>
    </div>
  </div>
  <div class="row">
    <div class="medium-6 columns">
      <%= f.input :address %>
    </div>
    <div class="medium-6 columns">
      <%= f.input :city %>
    </div>
  </div>
  <div class="row">
    <div class="medium-6 columns">
      <%= f.input :state %>
    </div>
    <div class="medium-6 columns">
      <%= f.input :zip %>
    </div>
  </div>
  <div class="row">
    <div class="medium-6 columns">
      <%= f.input :phone %>
    </div>
    <div class="medium-6 columns">
      <%= f.input :fax %>
    </div>
  </div>
  <div class="row">
    <div class="medium-6 columns">
      <%= f.input :email %>
    </div>
    <div class="medium-6 columns">
      <%= label_tag :region_name, "Region name" %>
      <%= text_field_tag :region_name %>
      <span class="hint">Name just one region this rep represents. More can be added later.</span>
    </div>
  </div>
  <br/><%= f.button :submit %>
<% end %>
