<h1>Listing news_products</h1>

<table>
  <tr>
    <th>Product</th>
    <th>News</th>
  </tr>

<% @news_products.each do |news_product| %>
  <tr>
    <td><%=h news_product.product_id %></td>
    <td><%=h news_product.news_id %></td>
    <td><%= link_to 'Show', [:admin, news_product] %></td>
    <td><%= link_to 'Edit', edit_admin_news_product_path(news_product) %></td>
    <td><%= link_to 'Delete', [:admin, news_product], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New news_product', new_admin_news_product_path %>