<h1>Download Registration</h1>

<ul class="button-group round">
	<li><%= link_to admin_download_registrations_path, class: "small secondary button" do %>
    <%= fa_icon "angle-double-left" %>
  <% end %>
  </li>
	<li><%= link_to edit_admin_download_registration_path(@download_registration), class: "small secondary button"  do%>
      <%= fa_icon "edit" %>
      Edit
    <% end %>
  </li>
</ul>

<p>
  <b>Registered download:</b>
  <%= link_to @download_registration.registered_download.name, [:admin, @download_registration.registered_download] %>
</p>

<p>
  <b>Email:</b>
  <%= @download_registration.email %>
</p>

<p>
  <b>First name:</b>
  <%= @download_registration.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @download_registration.last_name %>
</p>

<p>
  <b>Country:</b>
  <%= @download_registration.country %>
</p>

<p>
  <b>Serial number:</b>
  <%= @download_registration.serial_number %>
</p>

<p>
  <b>Download count:</b>
  <%= @download_registration.download_count %>
</p>

<p>
  <b>Download code:</b>
  <%= @download_registration.download_code %>
</p>

<% if @download_registration.receipt.present? %>
<p>
  <%= link_to "Receipt", @download_registration.receipt.expiring_url %>
</p>
<% end %>
