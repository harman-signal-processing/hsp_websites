<tr>
  <th style="background: #ccc;" width="50%">
    <%= content_translation.header %> <%= I18n.default_locale %>:
      <% if content_translation.edit_as_html? %>
        <div style="float: right">
          <%= link_to '#', class: "toggler",
            style: "font-weight: normal",
            data: {
            toggle: "#{ content_translation.content_method }_#{ content_translation.content_id}",
            editor: "#{ content_translation.content_method }_#{ content_translation.content_id}_editor"
          } do %>
            <%= fa_icon 'file-code-o' %>
          <% end %>
        </div>
      <% end %>
  </th>
  <th style="background: #ccc; border-bottom: 1px dotted #CCC" width="50%">
    <%= content_translation.header %> <%= @target_locale %>:
  </th>
</tr>
<% if content_translation.edit_as_html? %>
  <tr>
    <td valign="top" style="padding-right: 40px">
      <textarea class="code_preview" id="<%= content_translation.content_method %>_<%= content_translation.content_id %>_show"><%=raw content_translation.original_value %></textarea>
      <div id="<%= content_translation.content_method %>_<%= content_translation.content_id %>_hide" style="display: none;">
        <%=raw content_translation.original_value %>
      </div>
    </td>
    <td valign="top" style="border-left: 1px dotted #CCC; padding-left: 10px;">
      <%= text_area_tag "content[i#{content_translation.content_id}][#{content_translation.content_method}]",
        content_translation.content,
        id: "#{ content_translation.content_method }_#{ content_translation.content_id }_editor",
        style: "min-height: 400px" %>
    </td>
  </tr>
<% else %>
  <tr>
    <td valign="top" style="padding-right: 40px">
      <%=raw content_translation.original_value %>
    </td>
    <td valign="top" style="border-left: 1px dotted #CCC; padding-left: 10px;">
      <%= text_field_tag "content[i#{content_translation.content_id}][#{content_translation.content_method}]", content_translation.content %>
    </td>
  </tr>
<% end %>
