<%= form_for([:admin, @rso_monthly_report], html: {multipart: true}) do |f| %>
  <% if @rso_monthly_report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rso_monthly_report.errors.count, "error") %> prohibited this monthly report from being saved:</h2>

      <ul>
      <% @rso_monthly_report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, class: "mceEditor" %>
  </div>
  <div class="field">
    <%= f.label :rso_report, "Attachment" %><br />
    <%= f.file_field :rso_report %>
  </div>
  <% if @rso_monthly_report.new_record? %>
  <div class="field">
	<%= f.check_box :add_to_panel %>
	<%= f.label :add_to_panel, "Add this report to the RSO info panel for #{website.brand_name}" %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
