<h1>Listing Online Retailers</h1>

<% if can? :create, OnlineRetailer %>
<ul class="button-group round">
	<li><%= link_to 'New Online Retailer', new_admin_online_retailer_path, class: "small success button" %></li>
</ul>
<% end %>

<ul class="list">
<% @online_retailers.each do |online_retailer| %>
  <% if can? :update, online_retailer %>
  <li><%= link_to online_retailer.name, [:admin, online_retailer] %>
	<!-- <%= online_retailer.online_retailer_links.size %> links -->
	<% if online_retailer.bad_links.size > 0 %>
	<span style="color: red; margin-left: 2px">
		<%= pluralize(online_retailer.bad_links.size, "possible problem") %> found!
	</span>
	<% end %>
	</li>
  <% end %>
<% end %>
</ul>
