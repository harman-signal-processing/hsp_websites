<div class="row">
  <div class="small-12 medium-6 columns">
    <%= f.association :product, label: false, collection: website.brand.products %>
  </div>
  <div class="small-11 medium-5 columns">
    <div class="row collapse">
      <div class="small-9 columns">
        <%= f.input :discount, label: false %>
      </div>
      <div class="small-3 columns">
        <%= f.input :discount_type, label: false, as: :select, collection: ["$", "%"], include_blank: false %>
      </div>
    </div>
  </div>
  <div class="small-1 medium-1 columns">
    <%= f.input :_destroy, as: :hidden %>
    <%= link_to "<i class='fa fa-trash'></i>".html_safe,
      '#',
      class: 'remove_fields small secondary button postfix' %>
  </div>
</div>

