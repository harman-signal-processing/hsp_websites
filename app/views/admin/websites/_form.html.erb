<%= simple_form_for([:admin, @this_website]) do |f| %>
    <%= f.input :url, label: "URL" %><br />
    <%= f.input :folder, label: "Folder Name", hint:"(name of the folder within the layouts, public, images, etc.)" %>
  	<%= f.association :brand %>
	  <%= f.input :default_locale, hint: "(can also be set per-brand)" %>
  	<%= f.input :comment %>
    <%= f.button :submit %>
<% end %>
