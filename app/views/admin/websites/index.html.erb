<h1>Websites</h1>

<ul class="button-group round">
	<li><%= link_to "add a website", new_admin_website_path, class: "small success button" %></li>
</ul>

<% Brand.all.each do |brand| %>
	<h3><%= brand.name %>:</h3>
	<ul>
		<% brand.websites.each do |website| %>
		<li> <%= link_to website.url, [:admin, website] %> <span class="small"><%= website.comment %></span></li>
		<% end %>
	</ul>
<% end %>