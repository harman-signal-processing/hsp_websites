<%= form_for([:admin, @pricing_type]) do |f| %>
  <% if @pricing_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pricing_type.errors.count, "error") %> prohibited this pricing_type from being saved:</h2>

      <ul>
      <% @pricing_type.errors.full_messages.each do |msg| %>
