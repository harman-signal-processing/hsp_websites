<%= simple_form_for [:admin, @user] do |f| %>
	<%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :phone_number %>
  <%= f.input :job_title %>
  <%= f.input :job_description %>

  <%= f.input :admin, label: "Super Admin" %>
	<%= f.input :market_manager %>
  <%= f.input :marketing_staff %>
  <%= f.input :queue_admin, label: "Marketing Queue Administrator" %>
	<%= f.input :artist_relations %>
	<%= f.input :customer_service %>
	<%= f.input :sales_admin %>
	<%= f.input :online_retailer %>
	<%= f.input :engineer, label: "Engineer (can manage Software)" %>
	<%= f.input :translator %>
	<%= f.input :rohs %>
	<%= f.input :clinician %>
  <%= f.input :clinic_admin, label: "Clinic admin (can manage clinic schedule)" %>
  <%= f.input :rep %>
  <%= f.input :dealer %>
	<%= f.input :distributor %>

	<% unless @user.new_record? %>
	 <%= f.input :rso, label: "RSO" %>
	<% end %>
	<%= f.input :rso_admin, label: "RSO Admin (can post individual RSO reports)" %>

  <% if @user.new_record? %>
  <br/>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
  <% end %>

  <%= f.button :submit %>

<% end %>
