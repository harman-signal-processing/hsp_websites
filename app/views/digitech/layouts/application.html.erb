<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
		<%= csrf_meta_tag %>
		<%= display_meta_tags :site => Setting.site_name(website) %>
		<link rel="image_src" href="<%= image_url("#{website.folder}/logo.png") %>" />
		<%= javascript_include_tag 'application' %>
		<% if content_for?(:page_css) %>
			<%= yield :page_css %>
		<% else %>
			<%= stylesheet_link_tag 'application', website.folder, cache: false, media: :all %>
		<% end %>
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		<link type="text/css" href="/css/ui-lightness/jquery-ui-1.8.16.custom.css" rel="stylesheet" />
		<meta name="google-site-verification" content="wzOwJ6W1UIF7pcjTD8uhQy35nYuMTUPEbWEgJn436CQ" />
		<link href="<%= main_app.rss_url(:format => 'xml') %>" rel="alternate" title="RSS" type="application/rss+xml"/>
		<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<%= yield :custom_css %>
		<script>
	  		<%= yield :extra_js %>
	  	</script>
	    <%= render_partial "shared/analytics" %>
	</head>
	<body>
		<div id="fb-root"></div>
		<script>(function(d, s, id) {
		  var js, fjs = d.getElementsByTagName(s)[0];
		  if (d.getElementById(id)) return;
		  js = d.createElement(s); js.id = id;
		  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
		  fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));</script>
		<%= render_partial "shared/admin_dashboard_link" %>
		<%= render_partial "shared/header" %>
		
		<% if content_for?(:feature) %>
			<div id="feature_bg"></div>
			<div id="feature_container">
				<%= yield :feature %>
			</div>
		<% end %>

		<% if controller_name == "main" && action_name == "index" -%>
			<% if notice %><p style="color: green;"><%= notice %></p><% end %>
			<% if alert %><p style="color: red;"><%= alert %></p><% end %>
			<%= yield %>
		<% else %>
		<div id="content_container" class="internal_page">
			<div id="content_container_content" style="position: relative">
				<% if notice %><p style="color: green;"><%= notice %></p><% end %>
				<% if alert %><p style="color: red;"><%= alert %></p><% end %>
				<%= yield %>
			</div>
		</div>	
		<% end %>
		
		<% if content_for?(:middle_stuff) %>
		<div id="middle_container">
			<%= yield :middle_stuff %>
		</div>
		<% end %>
		
		<% if content_for?(:big_bottom_box) %>
			<div id="big_bottom_box_container">
				<div id="big_bottom_box_content">
				<%= yield :big_bottom_box %>
				</div>
				<div class="clear"></div>
			</div>
		<% else %>
			<div style="height: 30px;">&nbsp;</div>
		<% end %>
		
		<%= render_partial "shared/footer" %>
		
		<% if content_for?(:dealer_popup) %>
			<div id="blanket" style="display:none;"></div>
			<div id="dealer_popup_close" style="display:none;">
				<%= link_to_function(image_tag("close.png"), "popup('dealer_popup')")%>
			</div>
			<div id="dealer_popup" style="display:none;">
				<%= yield :dealer_popup %>
				<p><%= link_to_function "close", "popup('dealer_popup')" %></p>
			</div>
		<% end %>
		<div id="preload"><%= yield :preload %></div>
		<% if content_for?(:popup_code) %>
			<%= yield :popup_code %>
		<% end %>
	</body>
</html>