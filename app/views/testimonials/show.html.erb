<% set_meta_tags title: @testimonial.title,
  reverse: true,
  description: @testimonial.summary %>

<h1><%= @testimonial.title %></h1>
<% if @testimonial.subtitle.present? %>
  <h3 class="subheader"><%= @testimonial.subtitle %></h3>
<% end %>

<% if @testimonial.banner.present? %>
  <div>
    <%= image_tag @testimonial.banner.url, alt: "#{@testimonial.title} Banner Image" %>
  </div>
<% end %>

<div>
  <%=raw @testimonial.content %>
</div>

<% if @testimonial.attachment.present? %>
  <p>Download: <%= link_to @testimonial.attachment_file_name, @testimonial.attachment.url, target: "_blank" %></p>
<% end %>
