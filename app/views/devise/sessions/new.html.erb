<%= content_for :title do %>Sign in<% end %>

<div class="small-12 medium-6 medium-offset-3 columns">

  <div class="text-center">
    <h2>Sign in</h2>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      If you need an account, <%= link_to "click here to register", new_registration_path(resource_name) %>.
    <% end -%>
  </div>
  <br/>

  <div class="panel">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.input :email, autofocus: true %>
      <%= f.input :password, required: false,
        hint: link_to("Forgot your password?", new_password_path(resource_name)) %>
      <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Sign in", class: "button" %>
  <% end %>
  </div>

</div>
