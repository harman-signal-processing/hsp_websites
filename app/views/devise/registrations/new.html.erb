<%= content_for :title do %>Sign Up<% end %>

<div class="small-12 medium-6 medium-offset-3 columns">

  <div class="text-center">
    <h2>Sign up</h2>
    If you already have an account, <%= link_to "sign in here", new_session_path(resource_name) %>.
  </div>
  <br/>

  <div class="panel">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :invitation_code, required: true,
        hint: "Check with customer service to get the invitation code." %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.button :submit, "Sign up", class: "button" %>
    <% end %>
  </div>

</div>
