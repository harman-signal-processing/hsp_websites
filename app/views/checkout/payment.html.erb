<%= content_for :extra_header_code do %>
  <% if ENV['ADYEN_ENV'] == "test" %>
     <script src="https://checkoutshopper-test.adyen.com/checkoutshopper/sdk/4.3.1/adyen.js"
         integrity="sha384-eNk32fgfYxvzNLyV19j4SLSHPQdLNR+iUS1t/D7rO4gwvbHrj6y77oJLZI7ikzBH"
         crossorigin="anonymous"></script>
    
    <link rel="stylesheet"
         href="https://checkoutshopper-test.adyen.com/checkoutshopper/sdk/4.3.1/adyen.css"
         integrity="sha384-5CDvDZiVPuf+3ZID0lh0aaUHAeky3/ACF1YAKzPbn3GEmzWgO53gP6stiYHWIdpB"
         crossorigin="anonymous">
 <% else %>
     <script src="https://checkoutshopper-live.adyen.com/checkoutshopper/sdk/4.3.1/adyen.js"
         integrity="sha384-eNk32fgfYxvzNLyV19j4SLSHPQdLNR+iUS1t/D7rO4gwvbHrj6y77oJLZI7ikzBH"
         crossorigin="anonymous"></script>
    
    <link rel="stylesheet"
         href="https://checkoutshopper-live.adyen.com/checkoutshopper/sdk/4.3.1/adyen.css"
         integrity="sha384-5CDvDZiVPuf+3ZID0lh0aaUHAeky3/ACF1YAKzPbn3GEmzWgO53gP6stiYHWIdpB"
         crossorigin="anonymous">
  <% end %>

<% end %>

<h1>Checkout <%= fa_icon "credit-card" %></h1>
<br/>
<div class="row">
  <div class="small-12 medium-7 large-8 columns">
    <p>
      <%= link_to checkout_path do %>
        &lt;&lt; Back to billing address
      <% end %>
    </p>

    <div id="dropin"></div>
  </div>

  <div class="hide-for-small medium-5 large-4 columns">
    <div class="callout panel">
      <h5>Order Details</h5>
      <% @shopping_cart.line_items.each do |line_item| %>
        <div class="row">
          <div class="medium-8 columns">
            <%= line_item.product.name %>
            <% if line_item.product.digital_ecom? %>
              <br/><small>Instant electronic delivery.</small>
            <% end %>
          </div>
          <div class="medium-4 columns text-right">
            <%= line_item.quantity %>@
            <%= number_to_currency line_item.price %>
          </div>
        </div>
      <% end %>
      <hr/>
      <p class="text-right">
        Tax: <%= number_to_currency @shopping_cart.tax %><br/>
        <strong>Total: <%= number_to_currency @shopping_cart.total %></strong>
      </p>

    </div>
    <% if @shopping_cart.has_digital_downloads? %>
      <p class="text-center"><i><small>Software activation requires use of <a href="https://ilok.com" target="_blank">iLok physical license key dongle</a>.</small></i></p>
    <% end %>
  </div>
</div>

<div id="clientKey" class="hidden"><%= ENV['ADYEN_CLIENT_KEY'] %></div>
<div id="cartId" class="hidden"><%= @shopping_cart.uuid %></div>
<%= javascript_include_tag 'checkout' %>

