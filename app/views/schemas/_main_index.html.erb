<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "<%= website.brand.name %>",
  "url": "<%= request.url %>",
  "logo": "<%= request.base_url %>/logo.png",
  "sameAs": [
  <%= social_media_links('twitter',
    'facebook',
    'youtube',
    'youku',
    'instagram',
    'linkedin',
    'wechat',
    'weibo',
    'tmall',
    style: 'link-list').map{|l| "\"#{l}\""}.join(",\n ").html_safe %>
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+1 (844) 776-4899",
    "email": "HProTechSupportUSA@harman.com"
  },
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "8500 Balboa Boulevard",
    "addressLocality": "Northridge",
    "addressRegion": "CA",
    "postalCode": "91329",
    "addressCountry": "US"
  }
}
</script>
