<%= cache ["nav_items", website.brand, I18n.locale] do %>
	<li class="has-dropdown"><%= link_to t('products').titleize, product_families_path %>
		<ul class="dropdown">
      <% if website.has_product_selector? %>
        <li><%= link_to t("product_selector"), product_selector_path %></li>
      <% end %>
		  <li><%= link_to t('new_products'), new_products_path, target: "_blank" %></li>
			<% ProductFamily.parents_with_current_products(website, I18n.locale).each do |product_family| %>
				<%= product_family_nav_links(product_family) %>
			<% end %>
		</ul>
	</li>

  <li class="has-dropdown">
    <%= link_to "Applications", '#', class: "disabled" %>
    <ul class="dropdown">
      <% MarketSegment.all_parents(website).each do |market_segment| %>
        <%= market_segment_nav_links(market_segment) %>
      <% end %>
    </ul>
  </li>

  <li class="divider hide-for-medium"></li>
  <li class="has-dropdown"><%= link_to t("nav.case_studies"), case_studies_path %>
    <ul class="dropdown">
      <% if website.has_news? %>
        <li><%= link_to t('news').titleize, news_index_path %></li>
      <% end %>
    </ul>
  </li>

  <li class="divider hide-for-medium"></li>
  <li><%= link_to t('nav.videos').titleize, videos_path, target: "_blank" %></li>

	<% if website.has_artists? %>
	<li><%= link_to t('artists').titleize, artists_path %></li>
	<% end %>

  <% if website.has_learning_sessions.present? && website.has_learning_sessions == 1 %>
    <li class="divider hide-for-medium"></li>
    <li><%= link_to t('learning_sessions').titleize, "https://pro.harman.com/learning-sessions", target: "_blank" %></li>
  <% end %>

	<% if website.has_dealers? || website.has_distributors? || website.has_online_retailers? %>
	<li><%= link_to "Buy".titleize, where_to_find_path %></li>
	<% end %>

  <li class="has-dropdown"><%= link_to t('training').titleize, "/training", target: "_blank" %>
    <ul class="dropdown">
      <li><%= link_to "Broadcast Truck", "/#{I18n.locale}/broadcast-truck" %></li>
    </ul>
  </li>

  <li class="has-dropdown"><%= link_to t('product_support').titleize, support_path %>
    <ul class="dropdown">
      <li><%= link_to t('contact_us').titleize, support_path %></li>
      <li><%= link_to t('software_downloads').titleize, software_index_path %></li>
      <li><%= link_to t("nav.downloads"), "/#{I18n.locale}/support_downloads" %></li>
      <li><%= link_to t('warranty').titleize, warranty_path %></li>
      <% if website.has_product_registrations? %>
        <li><%= link_to t("warranty_registration").titleize, warranty_registration_path %></li>
      <% end %>
      <% if !!(website.forum_link) %>
        <li><%= link_to t("forum").titleize, website.forum_link %></li>
      <% end %>
    </ul>
  </li>

  <li class="has-dropdown">
    <%= link_to "About Us", '#', class: "disabled" %>
    <ul class="dropdown">
      <li><%= link_to "Create Sound", '/createsound' %></li>
      <li><%= link_to "Team Studer", '/team-studer' %></li>
      <li><%= link_to "About Studer", '/about-studer' %></li>
    </ul>
  </li>
<% end %>
