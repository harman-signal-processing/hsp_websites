<li id="component_<%= system_component.id %>">
	<%= system_component.name %> (qty: <span class="quantity">1</span>) 
	<% if system_component.description.present? %>
		<%= link_to(image_tag('icons/help.png', alt: '[?]'), '#', class: 'help', data: {container: "component_details_#{system_component.id }"}) %>
		<div class="long_description" id="component_details_<%= system_component.id %>">
			<%=raw textilize(system_component.description) %>
			<p><%= link_to('close', '#', class: 'small help button', data: {container: "component_details_#{system_component.id }"}) %></p>
		</div>
	<% end %>
</li>