<% set_meta_tags reverse: true,
  title: "#{website.brand.name} Installations"
%>

<div class="content container">
  <div class="row">
    <div class="small-12 medium-8 large-8 columns">
      <iframe src="https://www.google.com/maps/d/embed?mid=1hWFsjHtg20J9MKna2Fz7JyFcvQQ" width="100%" height="480" frameborder="0"></iframe>
    </div>
    <div class="small-12 medium-4 large-4 columns text-content">
      <h3><%= website.brand.name %> Installations</h3>

      <ul>
        <% @installations.each do |installation| %>
          <li><%= link_to installation.title, installation %></li>
        <% end %>
      </ul>

    </div>
  </div>
</div>
