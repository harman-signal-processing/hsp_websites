<div class="web-form-section">
<div class="row" >
	<div class="small-12 large-6 columns">
	 	<div>	
		 	<%= cache ["registerable_salutation", website.brand, I18n.locale] do %>
			<%= f.label "Title" %>
			<%= f.collection_select :salutation_id, 
				Salutation.all_for_website(),
				:id, :en, prompt: true, :class =>'50' %>
			<% end %>	
		</div>
		<div>
			<label>First Name <small class="color-accent bold">(required field)</small></label>
			<%= f.text_field :first_name, required: '', pattern: "[a-zA-Z]+" %>
			
    		<small class="error">First Name is required.</small>
		</div>
		<div>
			<label>Last Name <small class="color-accent bold">(required field)</small></label>
			<%= f.text_field :last_name, required: '', pattern: "[a-zA-Z]+" %>
			
    		<small class="error">Last Name is required.</small>
		</div>
		<div>
			<%= f.label :company %>
			<%= f.text_field :company %>
		</div>
		<div>
			<%= f.label :job_title %>
			<%= f.text_field :job_title %>
		</div>
		<div>
			<label>Email Address <small class="color-accent bold">(required field)</small></label>
			<%= f.text_field :email %>
    		<small class="error">Email address is required.</small>
		</div>	
		<div>
			<%= f.label :phone %>
			<%= f.text_field :phone %>
		</div>
	</div>	
	<div class="small-12 large-6 columns">
		<div>
			<%= f.label :address1 %>
			<%= f.text_field :address1 %>
		</div>
		<div>
			<%= f.label :address2 %>
			<%= f.text_field :address2 %>
		</div>
		<div>
			<%= f.label :city %>
			<%= f.text_field :city %>
		</div>
		<div>
			<%= f.label :county %>
			<%= f.text_field :county %>
		</div>
		<div>
			<%= f.label :post_code %>
			<%= f.text_field :post_code %>
		</div>
		<div>
			<%= cache ["registerable_countries", website.brand, I18n.locale] do %>
			<label>Country <small class="color-accent bold">(required field)</small></label>
			<%= f.collection_select :country_id, 
			Country.all_for_website(),
			:id, :name, prompt: true, required: '' %>
			
    		<small class="error">Country is required.</small>
			<% end %>
		</div>
	</div>
</div>	
</div>

