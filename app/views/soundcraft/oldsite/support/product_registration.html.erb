<%
	@meta = Page.find_by lcl_name: 'product_registration'
	meta title: @meta.title,
	description: strip_html(@meta.description),
	keywords: @meta.keywords.gsub(" ", ","),
	reverse: true,
	canonical: request.original_url
%>
<div id="header_bc">
	<div id="header_spacer"></div>
	<div id="header_bc_image" >
	<%= image_tag('top_border.gif') %>
	</div>
	<div id="bc">
	<nav class="breadcrumbs" role="menubar" aria-label="breadcrumbs">
		<li class="unavailable"  aria-disabled="true">>></li>
	    <li role="menuitem"><a href="/">Home</a></li>
	    <li role="menuitem"><a href="/support">Support</a></li>
	    <li role="menuitem" class="current"><a href="#"><%= @meta.title %></a></li>
	</nav>
</div>
</div>
<br />
<div class="row fullWidth">
	<div class="small-12 columns" >
	<h1>Product Registration</h1>
	</div>
</div>
<div align="center">
<% flash.each do |name, msg| %>
   <%= content_tag :div, msg, class: name %>
<% end %>
</div>
<div class="row fullWidth">
	<div class="small-12 large-4 columns" ><br />
Thank you for purchasing a new Soundcraft product. Product registration will validate your product and provide you with the latest news and updates for your product. 
	<br /><br /><br />	
      <h3>Product warranty</h3>
      Looking for details on product warranty? Click the button to learn more.<br /><br />
<a href="/support/warranty" class="button radius">Click here for product warranty</a>
	</div>
	<div class="small-12 large-8 columns" >
		<h3>Product Registration Form</h3>
	<%= form_for @user, url: product_registration_path, html: {class: "reg", "data-abide" => ''} do |f| %>
	<%= render :partial => "shared/form_contacts_section", :locals => {:f => f} %>
	<%= render :partial => "shared/form_products_section", :locals => {:f => f} %>	  	
	<div class="row">
	<div class="small-12 columns">
		<%= render :partial => "shared/form_optins_section", :locals => {:f => f} %>
		<div class="right"><%= f.submit t('submit_product_registration'), class: 'button radius margin-top' %></div>
	</div>
	</div>
	<% end %>
</div>
</div>
	<script>
	$(function() {
		$( "#user_users_products_attributes_0_purchased_date" ).datepicker({
			numberOfMonths: 1,
			dateFormat: "dd-mm-yy",
			maxDate: 0
		});
	});
	</script>
