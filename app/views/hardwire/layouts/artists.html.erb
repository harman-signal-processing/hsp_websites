<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
		<%= csrf_meta_tag %>
		<%= cache ["meta_tags", request.url] do %>
			<%= cached_meta_tags %>
			<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
			<![endif]-->
			<link href="<%= rss_url(format: 'xml') %>" rel="alternate" title="RSS" type="application/rss+xml"/>
			<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
			<link rel="icon" type="image/x-icon" href="/favicon.ico" />

			<meta property="og:site_name" content="<%= website.site_name %>" />
			<meta property="og:locale" content="<%= I18n.locale %>" />
			<meta property="og:url" content="<%= request.url %>" />

			<% if website.twitter_name %>
				<meta property="twitter:site" value="@<%= website.twitter_name %>" />
			<% end %>
			
			<% if File.exists?(Rails.root.join("app", "assets", "images", website.folder, "logo.png")) %>
			<link rel="image_src" href="<%= image_url("#{website.folder}/logo.png") %>" />		
			<% end %>

		<% end %>

		<%= javascript_include_tag 'application' %>
		<%= stylesheet_link_tag website.folder %>

		<%= yield :custom_css %>
		<script>
	  		<%= yield :extra_js %>
	  	</script>
	    <%= render_partial "shared/analytics" %>
	</head>
	<body class="artists" data-brand="<%= website.brand.name %>">
		<%= render_partial "shared/locale_switcher" %>
		<%= render_partial "shared/admin_dashboard_link" %>		
		<%= render_partial "shared/header" %>
				
		<div id="page_container">

		<div id="content_container" <% unless controller_name == "main" && action_name == "index" -%>class="internal_page"<% end -%>>
			<div id="artists_title">
				<%= link_to(image_tag("#{website.folder}/#{I18n.locale}/featured_artists.png", alt: t("artists")), artists_path) %>
			</div>
			<div id="artists_subnav">
				<% if artist_signed_in? %>
					<%= link_to "My Artist Profile", edit_artist_registration_path %>
					<%= link_to "Logout", destroy_artist_session_path %>
				<% else %>
					<%= link_to image_tag("#{website.folder}/#{I18n.locale}/become_an_artist.png", alt: "Become a #{website.brand_name} Artist"), become_an_artist_path %>
					<%= link_to image_tag("#{website.folder}/#{I18n.locale}/login.png", alt: "Artist Login"), become_an_artist_path %>
				<% end %>
			</div>
			<div id="content_container_content" style="position: relative;">
				<% if notice %><p style="color: green; background: #DBFFCF; padding: 2px 8px;"><%= notice %></p><% end %>
				<% if alert %><p style="color: red;"><%= alert %></p><% end %>
				<%= yield %>
			</div>
		</div>
	
		<% if content_for?(:big_bottom_box) %>
			<div id="big_bottom_box_container">
				<div id="big_bottom_box_content">
				<%= yield :big_bottom_box %>
				</div>
				<div class="clear"></div>
			</div>
		<% else %>
			<div style="height: 30px;">&nbsp;</div>
		<% end %>
			<%= cache ["hpro_bar", website, I18n.locale] do %>
				<%= hpro_footer %>
			<% end %>
		</div>
		<%= render "#{website.folder}/shared/footer"%>
	</body>
</html>