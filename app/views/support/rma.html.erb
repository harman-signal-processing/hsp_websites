<% set_meta_tags reverse: true %>

<h1 class="page_title"><%= @page_title %></h1>


<%= simple_form_for @contact_message, url: rma_request_path do |f| %>

	<div class="row">

		<div class="large-8 columns">
				<%= f.input :name, label: t('your_name'), required: true %>
				<div class="row">
					<div class="large-8 columns">
						<%= f.input :email, label: ucfirst(t('email')), required: true %>
					</div>
					<div class="large-4 columns">
						<%= f.input :phone %>
					</div>
				</div>
				<div class="row">
					<div class="large-8 columns">
						<%= f.input :company %>
					</div>
					<div class="large-4 columns">
						<%= f.input :account_number, hint: "If dealer or service center" %>
					</div>
				</div>
		</div>
		<div class="large-3 columns">
			<p>For local service in the US, please see the US Service Centers locator on our <%= link_to "support page", support_path %>.</p>
			<p><%= t('product_support_page.for_service_outside_the_us') %>
				<%= link_to t("product_support_page.please_contact_your_distributor", brand: website.brand_name), international_distributors_path %></p>
		</div>
	</div>

	<div class="row">
		<div class="large-6 columns">
      <legend><%= t('shipping_address') %></legend>
			<fieldset>
				<%= f.input :shipping_address, required: true, label: "Address (No P.O. Boxes)" %>
				<%= f.input :shipping_city, required: true %>
				<div class="row">
					<div class="large-6 columns">
						<%= f.input :shipping_state, required: true %>
					</div>
					<div class="large-6 columns">
						<%= f.input :shipping_zip, required: true %>
					</div>
				</div>
			</fieldset>
		</div>

		<div class="large-6 columns">
      <legend><%= t('billing_address') %> <i class="hint">if different</i></legend>
			<fieldset>
				<%= f.input :billing_address %>
				<%= f.input :billing_city %>
				<div class="row">
					<div class="large-6 columns">
						<%= f.input :billing_state %>
					</div>
					<div class="large-6 columns">
						<%= f.input :billing_zip %>
					</div>
				</div>
			</fieldset>
		</div>
	</div>

	<legend><%= t('product_details') %></legend>
	<div>
		<div class="row">
			<div class="large-2 columns">
				<%= f.label :product, nil, class: "right inline" %>
			</div>
		<%= cache ["rma_form_products", website.brand] do %>
			<div class="large-4 columns">
			<%= f.collection_select :product,
					Product.repairable(website) + [Product.new(name: "other")],
					:name, :name, prompt: true %>
			</div>
		<% end %>
			<div class="large-6 columns"></div>
		</div>

    <% if !website.brand.name.match(/crown/i) %>
      <div class="row">
        <div class="large-2 columns">
          <%= f.label :product_sku, nil, class: "right inline" %>
        </div>
        <div class="large-4 columns">
          <%= f.input :product_sku, label: false %>
        </div>
        <div class="large-6 columns">
          <div class="hint"><%= link_to "where to find the SKU", image_path("#{website.folder}/sku.jpg") %></div>
        </div>
      </div>
    <% end %>

		<div class="row">
			<div class="large-2 columns">
				<%= f.label :product_serial_number, "Serial Number", class: "right inline" %>
			</div>
			<div class="large-4 columns">
				<%= f.input :product_serial_number, label: false %>
			</div>
			<div class="large-6 columns">
				<div class="hint"><%= link_to "where to find the serial number", image_path("#{website.folder}/serial.jpg") %></div>
			</div>
		</div>

		<div class="row">
			<div class="large-2 columns">
				<%= f.label :purchased_on, nil, class: "right inline" %>
			</div>
			<div class="large-4 columns">
				<%= f.input :purchased_on, as: :string, label: false, input_html: { class: 'ui-datepicker-past-only' } %>
			</div>
			<div class="large-2 columns">
				<%= f.input :warranty, as: :boolean, required: false %>
			</div>
			<div class="large-4 columns">
				<div class="hint"><%= link_to "warranty policy", warranty_policy_path %></div>
			</div>
		</div>

		<h4><%= t('product_support_page.detailed_problem_description') %></h4>
		<div class="row">
			<div class="large-6 columns">
				<%= f.input :message, label: false, input_html: { style: "height: 150px"} %>
			</div>
		</div>

		<p><%= submit_tag t('submit'), class: "button" %></p>
	</div>
<% end %>

<% if website.support_survey_link %>
  <p>Let us know about your experience. Take our quick
  <%= link_to "survey.", website.support_survey_link, target: "_blank" %></p>
<% end %>
