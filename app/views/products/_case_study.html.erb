<%
banner_present = !(case_study[:banner_urls][:small_panel].include? "missing/banners")

bg_image = nil
if banner_present
  bg_image = case_study[:banner_urls][:large]
elsif case_study[:youtube_id].present?
  bg_image = "https://i.ytimg.com/vi/#{case_study[:youtube_id]}/mqdefault.jpg"
end

%>

<div class="row">
  <div class="small-12 columns">
    <div class="case_study_row" <% if bg_image.present? %> style="background-image: url(<%= bg_image %>)" <% end %>>
      <div class="row">
        <div class="small-10 small-offset-2 medium-8 medium-offset-4 large-6 large-offset-6 columns">
          <div class="panel">
            <%= link_to case_study_path(case_study[:slug]) do %>
              <h3><%= case_study[:headline] %></h3>
            <% end %>
            <br/>
            <%= link_to case_study_path(case_study[:slug]), class: "small button" do %>
              details
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br/>
