<% unless @product.name.to_s.match(/ipb/i) %>
<p><%= t('blurbs.product_tone_library_explanation', model: @product.name) %></p>
<% end %>

<ul>
	<% @product.tone_library_patches.each do |tlp| %>
	<% if tlp.tone_library_song && tlp.tone_library_song.displayname %>
	<li>
		<%= image_tag("icons/x-edit_17.png", alt: "x-edit patch", style: "vertical-align:middle") %>
		<%= link_to(tlp.tone_library_song.displayname, tlp.patch.url) %>
	</li>
	<% end %>
	<% end %>
</ul>