<script type="application/ld+json">
{
  "@context": "http://www.schema.org",
  "@type": "product",
  "brand": "<%= escape_javascript @product.brand.name %>",
  "name" : "<%= escape_javascript @product.name %>",
  <% if @product.photo %>
    "image": "<%= escape_javascript @product.photo.product_attachment.url(:original) %>",
  <% end %>
  <% if @product.meta_description.present? %>
   "description": "<%= escape_javascript translate_content(@product, :meta_description) %>"
  <% elsif @product.short_description.present? %>
   "description": "<%= escape_javascript translate_content(@product, :short_description) %>"
  <% elsif @product.short_description_4.present? %>
   "description": "<%= escape_javascript @product.short_description_4 %>"
  <% elsif @product.short_description_3.present? %>
   "description": "<%= escape_javascript @product.short_description_3 %>"
  <% elsif @product.short_description_2.present? %>
   "description": "<%= escape_javascript @product.short_description_2 %>"
  <% elsif @product.short_description_1.present? %>
   "description": "<%= escape_javascript @product.short_description_1 %>"
  <% end %>
}
</script>
