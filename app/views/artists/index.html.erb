<% set_meta_tags title: t('titles.artists'),
				 description: t('meta.description.featured_artists', brand: website.brand_name),
				 keywords: (@featured_artists).collect{|a| a.name}.join(", "),
				 reverse: true %>

<%= cache ["artist_slideshow", @featured_artists, website.brand, Rails.env, Date.today] do %>
	<div id="featured_artist_box">
		<%= artist_slideshow(slides: @featured_artists, transition: 'toggle') %>
	</div>
<% end %>

<%= cache ["artist_index_content", website.brand, Rails.env, Date.today, Time.now.hour] do %>
	<% ArtistTier.for_artist_page.each do |artist_tier| %>
		<% if artist_tier.artists_for(website).size > 0 %>
			<% artist_tier.artists_for(website).shuffle[0,3].each do |artist| %>
			  	<%= render_partial "artist", artist: artist %>
			<% end %>
			<div class="clear"></div>
		<% end %>
	<% end %>
<% end %>

<p style="text-align: right"><b><%= link_to "> all artists", all_artists_path %></b></p>
