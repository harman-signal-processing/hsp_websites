<h2>Edit Account</h2>

<div class="row">
  <div class="small-12 large-8 columns">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= f.error_notification %>

          <%= f.input :name %>
          <%= f.input :email %>
          <%= f.input :profile_pic %>
          <%= f.input :password, hint: "(leave blank if you don't want to change it)" %>
          <%= f.input :password_confirmation %>
          <%= f.input :current_password, hint: "(we need your current password to confirm your changes)" %>

          <%= f.submit "Update", class: 'round button' %>

    <% end %>
  </div>
  <div class="small-12 large-3 large-offset-1 columns">
    <div class="panel" style="text-align: center">
      <h5>Your current profile pic:</h5>
      <% if !resource.profile_pic_file_name.blank? %>
        <%= image_tag resource.profile_pic.url(:medium_square), style: "margin: 20px 0px" %>
      <% else %>
        <%= image_tag(resource.gravatar_url(default: 'mm', size: 100), width: 100, height: 100, style: "margin: 20px 0px") %>
        <div style="text-align: left"><small><i>You haven't uploaded a pic. The one above comes from
          <%= link_to "gravatar.com", "http://gravatar.com", target: "_blank" %> based
          on your email address: <%= resource.email %></i></small></div>
      <% end %>
    </div>
  </div>

</div>