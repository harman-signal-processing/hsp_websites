      <li><%= link_to t("nav.learning_spaces"), "/#{I18n.locale}/learn-learning-spaces" %></li>
      <li><%= link_to t("nav.meeting_rooms"), "/#{I18n.locale}/learn-meeting-rooms" %></li>
      <li><%= link_to t("nav.security"), "/#{I18n.locale}/learn-security" %></li>
      <li><%= link_to t("nav.sustainability"), "/#{I18n.locale}/learn-sustainability" %></li>
      <li><%= link_to t("nav.video_conferencing"), "/#{I18n.locale}/learn-video-conferencing" %></li>
      <li><%= link_to t("nav.solution_guides"), "/#{I18n.locale}/solution-guides" %></li>
    </ul>
  </li>

  <li class="divider hide-for-medium"></li>
  <li><%= link_to t('training').titleize, "/training", target: "_blank" %></li>

  <li class="divider hide-for-medium"></li>
    <li class="has-dropdown"><%= link_to t('product_support').titleize, "/#{I18n.locale}/support" %>
    <ul class="dropdown">
      <li><%= link_to t("nav.contact_us"), "/#{I18n.locale}/support" %></li>
      <li><%= link_to "Consultant Portal", "#{ENV['PRO_SITE_URL']}/consultant", target: "_blank" %></li>
