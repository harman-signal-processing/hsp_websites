        <li><%= link_to "InConcert Partners", "/#{I18n.locale}/partners" %></li>
        <li><%= link_to "Search Device Modules", "https://trade.amx.com/login/login.aspx?fromUrl=/Net/Inconcert/Devices/InConcertMainPage.aspx", target: "_blank" %></li>
