<table width="100%">
  <!-- model and description -->
  <tr>
    <td style="text-align:center;vertical-align:top;width:50%;">
        <span style="font-size:1.5rem"><%=link_to combo.tx.model, combo.tx.product_url, target: "_blank" %></span><br />
        <%= Product.find_by_name(combo.tx.model).short_description if Product.find_by_name(combo.tx.model).present? %><br />
    </td>
    <td style="text-align:center;vertical-align:top;width:50%;">
        <span style="font-size:1.5rem"><%=link_to combo.rx.model, combo.rx.product_url, target: "_blank" %></span><br />
        <%= Product.find_by_name(combo.rx.model).short_description if Product.find_by_name(combo.rx.model).present? %><br />
    </td>
  </tr>
  <!-- product images -->
  <tr>
    <td style="text-align:center;vertical-align:top;">
        <%=link_to image_tag(combo.tx.image_url, lazy: false), combo.tx.product_url, target: "_blank"%><br />
    </td>
    <td style="text-align:center;vertical-align:top;">
        <%=link_to image_tag(combo.rx.image_url, lazy: false), combo.tx.product_url, target: "_blank"%><br />
    </td>
  </tr>
  <!-- product urls -->
  <tr>
    <td style="text-align:center;vertical-align:top;">
      <%=link_to combo.tx.product_url, combo.tx.product_url, target: "_blank"%>
    </td>
    <td style="text-align:center;vertical-align:top;">
      <%=link_to combo.rx.product_url, combo.rx.product_url, target: "_blank"%>
    </td>
  </tr>
  <!-- product recommendations -->
  <tr>
    <td style="text-align:center;vertical-align:top;">
      Designed for use with rx:<br />
      <% AmxDxlinkDeviceInfo.recommended_rx(combo.tx).each do |item|%>
        <%=link_to item.model, item.product_url%><br />
      <% end %>
    </td>
    <td style="text-align:center;vertical-align:top;">
      Designed for use with tx:<br />
      <% AmxDxlinkDeviceInfo.recommended_tx(combo.rx).each do |item|%>
        <%=link_to item.model, item.product_url%><br />
      <% end %>
    </td>
  </tr>
</table>

